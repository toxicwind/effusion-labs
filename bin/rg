#!/usr/bin/env bash
set -euo pipefail
. "$(cd "$(dirname "$0")" && pwd)/_lib.sh"

retry_exec "$@" -- \
  "$REPO_ROOT/node_modules/.bin/rg" \
  "$REPO_ROOT/node_modules/.bin/ripgrep" \
  "$TOOLS_DIR/rg/rg" \
  /usr/bin/rg

echo "❌ ripgrep (rg) not available; install via package manager or provide a system 'rg'." >&2
exit 127
