#!/usr/bin/env bash
set -euo pipefail
DIR="$(cd "$(dirname "$0")" && pwd)"
PATH_WITHOUT_DIR=$(printf "%s" "$PATH" | sed "s|$DIR:||;s|:$DIR||;s|$DIR||")
REAL_NODE="$(PATH="$PATH_WITHOUT_DIR" command -v node)"
if [ -z "$REAL_NODE" ]; then
  echo "node binary not found" >&2
  exit 127
fi
exec "$REAL_NODE" "$@"
