#!/usr/bin/env bash
# Minimal wrapper for mktemp used by hype_run.
# Use canonical retry_exec resolution before falling back to system mktemp.
set -euo pipefail
. "$(cd "$(dirname "$0")" && pwd)/_lib.sh"

retry_exec "$@" -- \
  "$REPO_ROOT/node_modules/.bin/mktemp" \
  "$TOOLS_DIR/mktemp/mktemp" \
  mktemp

echo "❌ mktemp not available; ensure coreutils is installed." >&2
exit 127

