{
  "name": "effusion_labs_final",
  "version": "1.0.0",
  "description": "This is a digital studio and knowledge base for Effusion Labs, built with Eleventy and the powerful `@photogabble/eleventy-plugin-interlinker`.",
  "main": "index.js",
  "scripts": {
    "//-- CORE COMMANDS --//": "",
    "dev": "CSS_WATCH=1 npx concurrently -k -r -n css,11ty -c green,cyan \"npm:css:watch\" \"npm:dev:11ty\"",
    "dev:11ty": "ELEVENTY_SERVE=true eleventy --serve",
    "css:watch": "npx concurrently -k -r -n app,overlay -c magenta,blue \"npm:css:watch:app\" \"npm:css:watch:overlay\"",
    "css:watch:app": "postcss src/styles/app.tailwind.css -o src/assets/css/app.css -w --verbose",
    "css:watch:overlay": "postcss src/styles/mschf-overlay.css -o src/assets/css/mschf-overlay.css -w --verbose",
    "build": "eleventy",
    "docs:fetch": "node tools/doc-fetcher.mjs",
    "test": "c8 node tools/runner.mjs",
    "lint:advisory": "node tools/lint-archive-namespace.mjs",
    "lint:product-links": "node tools/lint-product-links.mjs",
    "format": "prettier -w .",
    "//-- CI & VALIDATION --//": "",
    "dead-links": "markdown-link-check -c link-check.config.json README.md",
    "validate:docs": "node tools/validate-docs.js",
    "report:products": "node tools/archive-products-report.mjs",
    "check:archives": "node tools/validate-archive-build.mjs",
    "deps:playwright": "playwright install chromium || true",
    "//-- DATA PIPELINE --//": "",
    "data:all": "npm run data:merge-sections && npm run data:synthesize && npm run data:merge-golden",
    "data:merge-sections": "node tools/merge-sections.mjs --verbose",
    "data:synthesize": "node tools/synthesize.mjs --verbose",
    "data:merge-golden": "node tools/merge-golden.mjs --verbose",
    "postinstall": "if [ \"${PATCH_PACKAGE_RUN:-1}\" != \"0\" ] && [ -x node_modules/.bin/patch-package ]; then patch-package; fi",
    "mcp:dev": "node mcp-stack/gateway/server.mjs",
    "mcp:test": "node mcp-stack/tests/smoke.mjs",
    "mcp:integration": "node mcp-stack/tests/integration.mjs",
    "style:canon": "node scripts/style-canon.mjs"
  },
  "engines": {
    "node": ">=24"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "chalk": "^5.6.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@babel/parser": "^7.28.4",
    "@photogabble/eleventy-plugin-interlinker": "1.1.0",
    "@playwright/test": "^1.55.0",
    "@quasibit/eleventy-plugin-schema": "1.11.1",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "@shikijs/markdown-it": "3.12.2",
    "@shikijs/transformers": "3.12.2",
    "@tailwindcss/postcss": "4.1.12",
    "@tailwindcss/typography": "0.5.16",
    "acorn": "^8.15.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bat-cli": "0.1.4",
    "c8": "10.1.3",
    "colorette": "^2.0.20",
    "daisyui": "5.1.6",
    "fast-glob": "^3.3.3",
    "fd-find": "^1.2.0",
    "fs-extra": "^11.3.1",
    "gray-matter": "^4.0.3",
    "jq": "1.7.2",
    "jsdom": "^26.1.0",
    "libnpmsearch": "9.0.0",
    "lucide": "^0.542.0",
    "luxon": "^3.6.1",
    "magic-string": "^0.30.19",
    "markdown-it": "14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-footnote": "^4.0.0",
    "markdown-link-check": "^3.13.7",
    "meriyah": "^6.1.4",
    "micromatch": "^4.0.8",
    "natural": "^8.1.0",
    "npm-registry-fetch": "19.0.0",
    "ora": "^8.2.0",
    "p-limit": "^7.1.1",
    "patch-package": "^8.0.0",
    "picocolors": "^1.1.1",
    "playwright-extra": "^4.3.6",
    "postcss": "^8.5.6",
    "postcss-cli": "11.0.1",
    "postcss-value-parser": "^4.2.0",
    "prettier": "3.6.2",
    "proxy-chain": "^2.5.0",
    "recast": "^0.23.11",
    "shiki": "3.12.2",
    "slugify": "1.6.6",
    "tailwindcss": "4.1.12",
    "tree-cli": "0.6.7",
    "undici": "^7.15.0",
    "yaml": "^2.8.1",
    "yargs": "^18.0.0",
    "yq": "0.0.1"
  },
  "overrides": {
    "glob": "^10.3.10",
    "uuid": "^9.0.1",
    "rimraf": "^5.0.5"
  }
}
