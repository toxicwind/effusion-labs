---
layout: "layout.njk"
metaDisable: true
showTitle: false
---
{% from "components/section.njk" import section %}
{% include "components/hero.njk" %}
<main class="mx-auto max-w-screen-xl px-6 sm:px-8 space-y-16">
  {% call section('Today at the Lab', '/meta/') %}
    {% for item in todayAtLab %}
      {% include "components/tile.njk" %}
    {% endfor %}
  {% endcall %}

  {% call section('Try It Now', '/projects/') %}
    {% for item in tryItNow %}
      {% include "components/tile.njk" %}
    {% endfor %}
  {% endcall %}

  {% call section('Idea Pathways', '/concepts/') %}
    {% for path in ideaPathways %}
      {% set path = path %}
      {% include "components/pathway.njk" %}
    {% endfor %}
  {% endcall %}

  {% call section('Open Questions', '/meta/') %}
    <ul class="space-y-2">
      {% for q in openQuestions %}
        <li class="text-gray-200">{{ q }}</li>
      {% endfor %}
    </ul>
  {% endcall %}

  {% call section('Lab Notebook (Recent)', '/sparks/') %}
    {% for item in recentNotebook %}
      {% include "components/tile.njk" %}
    {% endfor %}
  {% endcall %}

  <section class="space-y-4">
    <h2 class="font-heading text-2xl">Explore More</h2>
    <ul class="grid gap-2 sm:grid-cols-2 md:grid-cols-4">
      <li><a href="/projects/" class="block rounded border border-white/10 p-4 hover:bg-white/5 focus:outline-none focus:ring">Projects ({{ counts.projects }})</a></li>
      <li><a href="/concepts/" class="block rounded border border-white/10 p-4 hover:bg-white/5 focus:outline-none focus:ring">Concepts ({{ counts.concepts }})</a></li>
      <li><a href="/sparks/" class="block rounded border border-white/10 p-4 hover:bg-white/5 focus:outline-none focus:ring">Sparks ({{ counts.sparks }})</a></li>
      <li><a href="/meta/" class="block rounded border border-white/10 p-4 hover:bg-white/5 focus:outline-none focus:ring">Meta ({{ counts.meta }})</a></li>
    </ul>
  </section>
</main>
