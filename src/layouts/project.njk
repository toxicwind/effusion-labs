---
layout: base.njk
title: Project
showTitle: false
metaDisable: true
eleventyComputed:
  slug: "{{ projectSlug or page.fileSlug }}"
  proj: "{{ resume and resume.projectPages and resume.projectPages[slug] }}"
---

<section class="rounded-box border-2 border-black bg-base-200 p-5 sm:p-7 shadow-[6px_6px_0_0_rgba(0,0,0,0.85)]">
  <div class="flex flex-wrap items-center gap-3">
    <h1 class="m-0 font-extrabold tracking-tight fluid-title">
      {{ proj and proj.title or 'Project' }}
    </h1>
    {% if proj and proj.badge %}<span class="badge badge-neutral rounded-full">{{
        proj.badge
      }}</span>{% endif %}
  </div>
  {% if proj and proj.blurb %}<p class="opacity-85 mt-2 max-w-prose">{{ proj.blurb }}</p>{% endif %}
  {% if proj and (proj.repo or proj.demo) %}
    <div class="mt-3 flex flex-wrap gap-2">
      {% if proj.repo %}<a href="{{ proj.repo }}" class="btn btn-sm btn-outline">View Repo</a>{%
        endif
      %}
      {% if proj.demo %}<a href="{{ proj.demo }}" class="btn btn-sm btn-primary">Live Demo</a>{%
        endif
      %}
    </div>
  {% endif %}
</section>
<section class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8 mt-6">
  <article class="card hb-tile rounded-box">
    <div class="card-body">
      <h2 class="text-sm uppercase tracking-widest opacity-60">Highlights</h2>
      {% if proj and proj.highlights %}
        <ul class="mt-2 space-y-1.5 text-[15px] leading-6">
          {% for item in proj.highlights %}<li>{{ item }}</li>{% endfor %}
        </ul>
      {% else %}
        <p class="opacity-70">—</p>
      {% endif %}
    </div>
  </article>
  <article class="card hb-tile rounded-box">
    <div class="card-body cq-root cq-chips">
      <h2 class="text-sm uppercase tracking-widest opacity-60">Stack</h2>
      <div class="mt-2 flex flex-wrap gap-2">
        {% for t in (proj and proj.stack) or [] %}<span class="badge badge-ghost rounded-full">{{
            t
          }}</span>{% endfor %}
      </div>
    </div>
  </article>
  <article class="card hb-tile rounded-box">
    <div class="card-body">
      <h2 class="text-sm uppercase tracking-widest opacity-60">Status</h2>
      <p class="mt-2">{{ (proj and proj.status) or '—' }}</p>
      {% if proj and proj.when %}<p class="opacity-70 text-sm mt-1">{{ proj.when }}</p>{% endif %}
    </div>
  </article>
</section>
{% if content | trim %}
  <section class="mt-8 space-y-8">
    {{ content | safe }}
  </section>
{% endif %}
