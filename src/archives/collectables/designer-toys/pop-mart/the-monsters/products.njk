---
layout: "layout.njk"
pagination:
  data: collections.archiveProducts | byCompany('pop-mart') | byLine('the-monsters') | byLocale('en')
  size: 1
  alias: product
eleventyComputed:
  companySlug: "{{ product.data.companySlug or 'pop-mart' }}"
  lineSlug: "{{ product.data.lineSlug or 'the-monsters' }}"
  productSlug: "{{ product.data.productSlug or (product.data.product_id | slug) }}"
  title: "POP MART — {{ lineSlug | replace('-', ' ') | title }} — {{ product.data.product_id or product.data.title or productSlug }}"
permalink: "/archives/collectables/designer-toys/{{ companySlug }}/{{ lineSlug }}/products/{{ productSlug }}/index.html"
---
{% from "components/products/SpecSheet.njk" import specSheet %}
{% from "components/products/MarketTable.njk" import marketTable %}
{% from "components/badge.njk" import badge %}
{% from "components/back-link.njk" import backLink %}

<nav class="breadcrumbs text-sm mb-2 overflow-x-auto whitespace-nowrap" aria-label="Breadcrumb">
  <ul>
    <li><a href="/archives/">Archives</a></li>
    <li><a href="/archives/collectables/designer-toys/{{ companySlug }}/">POP MART</a></li>
    <li><a href="/archives/collectables/designer-toys/{{ companySlug }}/{{ lineSlug }}/">
      {{ lineSlug | replace('-', ' ') | title }}</a>
    </li>
    <li class="opacity-70">{{ product.data.product_id or product.data.title or productSlug }}</li>
  </ul>
</nav>

<div class="mb-6">
  {{ backLink('Back', '/archives/collectables/designer-toys/' + companySlug + '/' + lineSlug + '/') }}
</div>

<header class="mb-6">
  <h1 class="font-heading text-3xl uppercase tracking-[-0.02em] text-primary mb-0">
    {{ product.data.product_id or product.data.title or productSlug }}
  </h1>

  <div class="mt-2 flex flex-wrap gap-2 text-sm text-base-content/80">
    {% if product.data.character %}
      <span class="opacity-70">Character:</span>
      <a class="badge badge-outline badge-info align-middle"
         href="/archives/collectables/designer-toys/{{ companySlug }}/{{ lineSlug }}/characters/{{ (product.data.character) | slug }}/">
        {{ product.data.character }}
      </a>
    {% endif %}

    {% if product.data.seriesSlug or product.data.series %}
      <span class="opacity-60">•</span>
      <span class="opacity-70">Series:</span>
      {% set sslug = (product.data.seriesSlug or product.data.series) | slug %}
      <a class="badge badge-outline align-middle"
         href="/archives/collectables/designer-toys/{{ companySlug }}/{{ lineSlug }}/series/{{ sslug }}/">
        {{ product.data.series or sslug }}
      </a>
    {% endif %}
  </div>
</header>

<section class="card bg-base-100 border shadow-sm">
  <div class="card-body p-4 sm:p-6">
    {{ specSheet(product) }}
  </div>
</section>

{% if product.data.market_listings %}
<section class="mt-6 card bg-base-100 border">
  <div class="card-body p-4 sm:p-6">
    <h2 class="card-title text-lg m-0">Market Listings</h2>
    {{ marketTable(product.data.market_listings) }}
  </div>
</section>
{% endif %}

<footer class="mt-8 flex items-center justify-between text-sm">
  {% if pagination.href.previous %}
    <a class="link link-hover" href="{{ pagination.href.previous }}">&larr; Previous</a>
  {% else %}<span></span>{% endif %}
  {% if pagination.href.next %}
    <a class="link link-hover" href="{{ pagination.href.next }}">Next &rarr;</a>
  {% endif %}
</footer>
