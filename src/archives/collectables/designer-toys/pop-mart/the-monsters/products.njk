---
layout: "layout.njk"
pagination:
  data: collections.monstersProducts
  size: 1
  alias: product
eleventyComputed:
  productSlug: "{{ (product.data.product_id or product.fileSlug or product.data.slug or ('p-' ~ pagination.pageNumber)) | slug }}"
  title: "POP MART — The Monsters — {{ product.data.product_id or product.data.title or productSlug }}"
permalink: "/archives/collectables/designer-toys/pop-mart/the-monsters/products/{{ productSlug }}/index.html"
---
{% from "components/products/SpecSheet.njk" import specSheet %}
{% from "components/products/MarketTable.njk" import marketTable %}
{% from "components/badge.njk" import badge %}
{% from "components/back-link.njk" import backLink %}

<nav class="breadcrumbs text-sm mb-2" aria-label="Breadcrumb">
  <ul>
    <li><a href="/archives/">Archives</a></li>
    <li><a href="/archives/collectables/designer-toys/pop-mart/">POP MART</a></li>
    <li><a href="/archives/collectables/designer-toys/pop-mart/the-monsters/">The Monsters</a></li>
    <li class="opacity-70">{{ product.data.product_id or title }}</li>
  </ul>
</nav>

<div class="mb-6">
  {{ backLink('Back', '/archives/collectables/designer-toys/pop-mart/the-monsters/') }}
</div>

<header class="mb-6">
  <h1 class="text-3xl font-heading tracking-wide text-primary mb-0">
    {{ product.data.product_id or title }}
  </h1>
  {% if product.data.character %}
    <div class="mt-2 text-sm opacity-80">
      Character:
      <a class="badge badge-outline badge-primary align-middle"
         href="/archives/collectables/designer-toys/pop-mart/the-monsters/characters/{{ (product.data.character) | slug }}/">
        {{ product.data.character }}
      </a>
    </div>
  {% endif %}
</header>


<section class="card bg-base-100 border shadow-sm">
  <div class="card-body p-4 sm:p-6">
    {{ specSheet(product) }}
  </div>
</section>

{% if product.data.market_listings %}
<section class="mt-6 card bg-base-100 border">
  <div class="card-body p-4 sm:p-6">
    <h2 class="card-title text-lg m-0">Market Listings</h2>
    {{ marketTable(product.data.market_listings) }}
  </div>
</section>
{% endif %}

<footer class="mt-8 flex items-center justify-between text-sm">
  {% if pagination.href.previous %}
    <a class="link link-hover" href="{{ pagination.href.previous }}">&larr; Previous</a>
  {% else %}<span></span>{% endif %}
  {% if pagination.href.next %}
    <a class="link link-hover" href="{{ pagination.href.next }}">Next &rarr;</a>
  {% endif %}
</footer>
