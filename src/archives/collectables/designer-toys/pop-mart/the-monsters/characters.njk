---
layout: "layout.njk"
pagination:
  data: collections.monstersCharacters
  size: 1
  alias: character
eleventyComputed:
  charSlug: "{{ (character.data.slug or character.fileSlug or character.data.name or ('c-' ~ pagination.pageNumber)) | slug }}"
  title: "POP MART — The Monsters — {{ character.data.name or character.data.slug or charSlug }}"
permalink: "/archives/collectables/designer-toys/pop-mart/the-monsters/characters/{{ charSlug }}/index.html"
---
{% from "components/badge.njk" import badge %}
{% from "components/back-link.njk" import backLink %}

<nav class="breadcrumbs text-sm mb-2 overflow-x-auto whitespace-nowrap" aria-label="Breadcrumb">
  <ul>
    <li><a href="/archives/">Archives</a></li>
    <li><a href="/archives/collectables/designer-toys/pop-mart/">POP MART</a></li>
    <li><a href="/archives/collectables/designer-toys/pop-mart/the-monsters/">The Monsters</a></li>
    <li class="opacity-70">{{ character.data.name or character.data.slug or charSlug }}</li>
  </ul>
</nav>

<div class="mb-6">
  {{ backLink('Back', '/archives/collectables/designer-toys/pop-mart/the-monsters/') }}
</div>

<header class="mb-6">
  <h1 class="text-3xl font-heading tracking-wide text-primary mb-0">
    {{ character.data.name or character.data.slug or charSlug }}
  </h1>
  {% if character.data.notes %}
    <p class="mt-2 opacity-80">{{ character.data.notes }}</p>
  {% endif %}
</header>

<h2 class="text-lg font-semibold mt-6 mb-3">Products featuring this character</h2>
<ul class="flex flex-wrap gap-2">
{% set count = 0 %}
{% for p in collections.monstersProducts %}
  {% if p.data.character == (character.data.slug or character.data.name) %}
    {% set pslug = (p.data.product_id or p.fileSlug or p.data.slug or ('p-' ~ loop.index)) | slug %}
    {% set _ = count + 1 %}
    <li>{{ badge(p.data.product_id, "/archives/collectables/designer-toys/pop-mart/the-monsters/products/" + pslug + "/") }}</li>
  {% endif %}
{% endfor %}
{% if count == 0 %}
  <li class="opacity-60">No products found for this character.</li>
{% endif %}
</ul>
