---
layout: "layout.njk"
eleventyComputed:
  companySlug: "pop-mart"
  lineSlug: "the-monsters"
  title: "POP MART — The Monsters"
  lineProducts: "{{ collections.archiveProducts | byCompany(companySlug) | byLine(lineSlug) }}"
  lineCharacters: "{{ collections.archiveCharacters | byCompany(companySlug) | byLine(lineSlug) }}"
  lineSeries: "{{ collections.archiveSeries | byCompany(companySlug) | byLine(lineSlug) }}"
---

<header class="mb-6">
  <h1 class="text-3xl font-heading tracking-wide text-primary mb-0">POP MART — The Monsters</h1>
  <p class="opacity-80 mt-2">Explore products, characters, and series.</p>
</header>

<section class="mb-10">
  <h2 class="text-xl font-semibold mb-3">
    Products <span class="opacity-60">({{ lineProducts | length }})</span>
  </h2>
  <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {% for p in lineProducts %}
      <li class="card bg-base-100 border hover:shadow-md transition">
        <a class="card-body p-4 sm:p-5 block"
           href="/archives/collectables/designer-toys/{{ companySlug }}/{{ lineSlug }}/products/{{ p.data.productSlug }}/">
          <h3 class="card-title text-base m-0">{{ p.data.product_id or p.data.title or p.data.productSlug }}</h3>
          {% if p.data.character %}
            <span class="badge badge-outline badge-primary mt-2">{{ p.data.character }}</span>
          {% endif %}
        </a>
      </li>
    {% endfor %}
  </ul>
</section>

<section class="mb-10">
  <h2 class="text-xl font-semibold mb-3">
    Characters <span class="opacity-60">({{ lineCharacters | length }})</span>
  </h2>
  <ul class="flex flex-wrap gap-2">
    {% for c in lineCharacters %}
      <li>
        <a class="badge badge-outline hover:badge-primary transition"
           href="/archives/collectables/designer-toys/{{ companySlug }}/{{ lineSlug }}/characters/{{ c.data.charSlug }}/">
          {{ c.data.name or c.data.slug or c.data.charSlug }}
        </a>
      </li>
    {% endfor %}
  </ul>
</section>

{% if lineSeries and lineSeries.length %}
<section class="mb-10">
  <h2 class="text-xl font-semibold mb-3">
    Series <span class="opacity-60">({{ lineSeries | length }})</span>
  </h2>
  <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {% for s in lineSeries %}
      <li class="card bg-base-100 border hover:shadow-md transition">
        <a class="card-body p-4 sm:p-5 block"
           href="/archives/collectables/designer-toys/{{ companySlug }}/{{ lineSlug }}/series/{{ s.data.seriesSlug }}/">
          <h3 class="card-title text-base m-0">{{ s.data.title or s.data.seriesSlug }}</h3>
          {% if s.data.notes %}<p class="opacity-80 mt-1">{{ s.data.notes }}</p>{% endif %}
        </a>
      </li>
    {% endfor %}
  </ul>
</section>
{% endif %}
