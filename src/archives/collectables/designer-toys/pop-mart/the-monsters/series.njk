---
layout: "layout.njk"
pagination:
  data: collections.monstersSeries
  size: 1
  alias: series
eleventyComputed:
  seriesSlug: "{{ (series.data.slug or series.fileSlug or pagination.pageNumber) | slug }}"
  title: "POP MART — The Monsters — {{ series.data.title or seriesSlug }}"
permalink: "/archives/collectables/designer-toys/pop-mart/the-monsters/series/{{ seriesSlug }}/index.html"
---
{% from "components/back-link.njk" import backLink %}

<nav class="breadcrumbs text-sm mb-2 overflow-x-auto whitespace-nowrap" aria-label="Breadcrumb">
  <ul>
    <li><a href="/archives/">Archives</a></li>
    <li><a href="/archives/collectables/designer-toys/pop-mart/">POP MART</a></li>
    <li><a href="/archives/collectables/designer-toys/pop-mart/the-monsters/">The Monsters</a></li>
    <li class="opacity-70">{{ series.data.title or seriesSlug }}</li>
  </ul>
</nav>

<div class="mb-6">
  {{ backLink('Back', '/archives/collectables/designer-toys/pop-mart/the-monsters/') }}
</div>

<header class="mb-6">
  <h1 class="text-3xl font-heading tracking-wide text-primary mb-0">
    {{ series.data.title or seriesSlug }}
  </h1>
  {% if series.data.notes %}
    <p class="mt-2 opacity-80">{{ series.data.notes }}</p>
  {% endif %}
</header>

{# Optional: if your product docs include a `series` field matching this slug, show them #}
{% if collections.monstersProducts %}
  {% set matches = collections.monstersProducts | filter(p => p.data.series and (p.data.series == (series.data.slug or seriesSlug))) %}
  {% if matches and matches.length %}
    <h2 class="text-lg font-semibold mt-6 mb-3">Products in this series</h2>
    <ul class="flex flex-wrap gap-2">
      {% for p in matches %}
        {% set pslug = (p.data.product_id or p.fileSlug or p.data.slug or ('p-' ~ loop.index)) | slug %}
        <li><a class="badge badge-outline hover:badge-primary transition"
               href="/archives/collectables/designer-toys/pop-mart/the-monsters/products/{{ pslug }}/">
          {{ p.data.product_id or pslug }}
        </a></li>
      {% endfor %}
    </ul>
  {% endif %}
{% endif %}
