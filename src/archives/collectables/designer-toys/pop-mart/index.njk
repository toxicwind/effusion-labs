---
layout: "layout.njk"
eleventyComputed:
  companySlug: "pop-mart"
  title: "POP MART"
---
{% from "components/back-link.njk" import backLink %}
{% from "archive-nav.njk" import archiveNav %}

<nav class="breadcrumbs text-sm mb-2 overflow-x-auto whitespace-nowrap" aria-label="Breadcrumb">
  <ul>
    <li><a href="/archives/">Archives</a></li>
    <li class="opacity-70">POP MART</li>
  </ul>
</nav>

<div class="mb-6">
  {{ backLink('Back', '/archives/') }}
</div>

<header class="mb-6">
  <h1 class="font-heading text-4xl uppercase tracking-[-0.025em] text-primary m-0">POP MART</h1>
  <p class="mt-2 text-base-content/80">Browse POP MART lines discovered at build time.</p>
</header>

<section class="mb-10">
  <div class="card bg-base-100 border shadow-sm">
    <div class="card-body p-4 sm:p-6">
      {{ archiveNav(page.url, archivesNav) }}
    </div>
  </div>
</section>

{% set lines = (archiveLines[companySlug] or []) %}
<section class="mb-12">
  <h2 class="text-xl font-semibold mb-3">Lines</h2>
  {% if lines.length %}
    <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {% for line in lines %}
        <li class="card bg-base-100 border hover:shadow-xl hover:border-primary/50 transition">
          <a class="card-body p-4 sm:p-5 block" href="/archives/collectables/designer-toys/{{ companySlug }}/{{ line.slug }}/">
            <h3 class="card-title text-base m-0">{{ line.title or line.slug }}</h3>
            {% if line.description %}
              <p class="mt-1 text-base-content/80">{{ line.description }}</p>
            {% endif %}
            <div class="mt-3 flex flex-wrap gap-2">
              <span class="badge badge-outline">Products: {{ line.counts.products or 0 }}</span>
              <span class="badge badge-outline">Characters: {{ line.counts.characters or 0 }}</span>
              <span class="badge badge-outline">Series: {{ line.counts.series or 0 }}</span>
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <div class="alert"><span>No lines found under POP MART yet.</span></div>
  {% endif %}
</section>
