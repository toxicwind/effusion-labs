---
layout: "layout.njk"
pagination:
  data: archiveCharactersEn
  size: 1
  alias: character
eleventyComputed:
  permalink: "/archives/character/{{ character.data.charSlug }}/"
  title: "{{ character.data.name or character.data.charSlug }}"
---
{% from "components/back-link.njk" import backLink %}

<nav class="breadcrumbs text-sm mb-2 overflow-x-auto whitespace-nowrap" aria-label="Breadcrumb">
  <ul>
    <li><a href="/archives/">Archives</a></li>
    <li><a href="/archives/collectables/designer-toys/{{ character.data.companySlug }}/">{{ character.data.companyTitle }}</a></li>
    <li><a href="/archives/collectables/designer-toys/{{ character.data.companySlug }}/{{ character.data.lineSlug }}/">{{ character.data.lineTitle }}</a></li>
    <li class="opacity-70">{{ character.data.name or character.data.charSlug }}</li>
  </ul>
</nav>

<div class="mb-6">{{ backLink('Back', '/archives/collectables/designer-toys/' + character.data.companySlug + '/' + character.data.lineSlug + '/') }}</div>

<header class="mb-6">
  <h1 class="font-heading text-3xl uppercase tracking-[-0.02em] text-primary mb-0">{{ character.data.name or character.data.charSlug }}</h1>
</header>

{% set products = collections.archiveProducts | byCompany(character.data.companySlug) | byLine(character.data.lineSlug) %}
{% if products.length %}
  <h2 class="text-lg font-semibold mt-6 mb-3">Products featuring this character</h2>
  <ul class="flex flex-wrap gap-2">
    {% for p in products %}
      {% if p.data.charSlug and p.data.charSlug == character.data.charSlug %}
      <li><a class="badge badge-outline hover:badge-info transition" href="{{ p.data.canonicalUrl }}">{{ p.data.product_id or p.data.productSlug }}</a></li>
      {% endif %}
    {% endfor %}
  </ul>
{% endif %}
