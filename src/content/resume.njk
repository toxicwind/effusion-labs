---
permalink: "/resume/"
title: "Resume"
layout: false
eleventyExcludeFromCollections: true
---

{# src/resume/index.njk — adaptive layout, subtle accents, canonical+absolute SEO, no rainbow #}
<!DOCTYPE html>
<html lang="en" class="scroll-pt-16 assertive-geometry">
<head>
  <!-- Meta -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <meta name="color-scheme" content="light dark">
  <meta name="theme-color" media="(prefers-color-scheme: light)" content="hsl(0 0% 100%)">
  <meta name="theme-color" media="(prefers-color-scheme: dark)" content="hsl(210 6% 5%)">
  <script src="/assets/js/theme-utils.js"></script>
  <script>ThemeUtils.initEarly();</script>
  <meta name="msapplication-TileColor" content="hsl(210 6% 5%)">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

  {% from "macros/meta.njk" import buildPageTitle, buildPageDesc %}
  {% set pageTitle = buildPageTitle(resume, title) %}
  {% set pageDesc  = buildPageDesc(resume) %}

  {# Canonicals (prefer absolute when site.url is present) #}
  {% set canonicalPath = "/resume/" | url %}
  {% if site and site.url %}
    {% set canonicalHref = site.url + canonicalPath %}
  {% else %}
    {% set canonicalHref = canonicalPath %}
  {% endif %}
  {% set homePath = "/" | url %}
  {% if site and site.url %}
    {% set homeHref = site.url + homePath %}
  {% else %}
    {% set homeHref = homePath %}
  {% endif %}

  {# OG image absolute URL if possible #}
  {% if resume and resume.ogImage %}
    {% set ogImageRel = resume.ogImage | url %}
    {% if site and site.url %}
      {% set ogImageHref = site.url + ogImageRel %}
    {% else %}
      {% set ogImageHref = ogImageRel %}
    {% endif %}
  {% endif %}

  <title>{{ pageTitle }}</title>
  <link rel="canonical" href="{{ canonicalHref }}">
  <meta name="description" content="{{ pageDesc }}">

  <!-- Open Graph -->
  <meta property="og:type" content="profile">
  <meta property="og:title" content="{{ pageTitle }}">
  <meta property="og:description" content="{{ pageDesc }}">
  <meta property="og:url" content="{{ canonicalHref }}">
  {% if ogImageHref %}<meta property="og:image" content="{{ ogImageHref }}">{% endif %}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ pageTitle }}">
  <meta name="twitter:description" content="{{ pageDesc }}">
  {% if ogImageHref %}<meta name="twitter:image" content="{{ ogImageHref }}">{% endif %}

  <!-- Tailwind v4 + daisyUI v5 (site bundle) -->
  <link rel="stylesheet" href="/assets/css/app.css?v={{ build.hash or build.commit or build.version or buildTime }}">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=Rubik:wght@400..900&family=Space+Grotesk:wght@400..700&display=swap" rel="stylesheet">

  <!-- Skip-link and print polish (accent + neon live in app.css) -->
  <style>
    /* Accessibility skip link */
    .skip-link{position:absolute;left:-9999px;top:auto;width:1px;height:1px;overflow:hidden}
    .skip-link:focus{left:1rem;top:1rem;width:auto;height:auto;padding:.5rem .75rem;z-index:1000}

    /* Print smoothing */
    @media print{
      @page{margin:.6in}
      .no-print,.navbar{display:none!important}
      .shadow,.shadow-lg,.shadow-xl{--tw-shadow:0 0 rgb(0 0 0 / 0)!important}
      body{background:hsl(0 0% 100%)!important;color:hsl(0 0% 0%)!important}
      a{color:hsl(0 0% 0%)!important;text-decoration:none!important}
      .card{background:hsl(0 0% 100%)!important;border-color:hsl(0 0% 87%)!important}
    }

    /* Accent utilities moved to global sheet (src/styles/app.tailwind.css). */
  </style>
</head>

<body class="bg-base-100 text-base-content font-body antialiased selection:bg-primary/20" data-page="resume">
  <a href="#main" class="skip-link btn btn-sm">Skip to main content</a>

  <!-- Top bar -->
  <div class="navbar bg-base-100 border-b-2 border-base-300 sticky top-0 z-40 bar-underline">
    <div class="flex-1">
      <a href="{{ '/' | url }}" class="btn btn-ghost text-base font-semibold">
        {{ resume and resume.name or 'Resume' }}
      </a>
    </div>
    <div class="flex-none gap-2 items-center">
      <button id="theme-toggle" class="btn btn-ghost btn-square no-print" type="button" aria-pressed="false" aria-label="Switch theme" title="Toggle theme">Theme</button>
      <button class="btn btn-sm btn-outline no-print hb-anim" onclick="window.print()" title="Print / Save PDF">Print</button>
    </div>
  </div>

  <!-- Main grid -->
  <main id="main" class="container-fluid px-4 sm:px-6 lg:px-8 2xl:px-12 3xl:px-16 4xl:px-20 my-10 sm:my-12">
    <div class="hb-sheet grid grid-cols-12 gap-6 sm:gap-8 p-4 sm:p-6">
      <!-- LEFT RAIL (sticky on lg+) -->
      <aside class="col-span-12 lg:col-span-4">
        <div class="space-y-6 lg:sticky lg:top-6">
          <!-- Identity -->
          {% from "components/neon-card.njk" import neonCard %}
          {% call neonCard({ intensity: 'lite' }) %}
            <h1 class="text-4xl md:text-5xl font-black tracking-tight title-glow">
              {{ resume and resume.name or "Your Name" }}
            </h1>
            <p class="mt-2 text-lg opacity-85 ink-soft">
              {{ resume and resume.title or "Creative Technologist & Engineer" }}
            </p>

            <div class="mt-4 flex flex-wrap gap-2 text-sm items-center">
              {% if resume and resume.location %}
                <span class="badge badge-outline rounded-full chip-elevated">{{ resume.location }}</span>
              {% endif %}
              {% if resume and resume.phoneNote %}
                <span class="tooltip tooltip-bottom" data-tip="{{ resume.phoneNote }}">
                  <span class="badge badge-outline rounded-full chip-elevated">Phone on request</span>
                </span>
              {% endif %}
              {% if resume and resume.email %}
                <a class="badge badge-outline rounded-full chip-elevated" href="mailto:{{ resume.email }}" onclick="copyToClipboard('{{ resume.email | escape }}'); return false;" title="Copy email">{{ resume.email }}</a>
              {% endif %}
              {% if resume and resume.linkedin %}
                <a class="badge badge-outline rounded-full chip-elevated" href="{{ resume.linkedin }}" target="_blank" rel="noopener">LinkedIn</a>
              {% endif %}
              {% if resume and resume.website %}
                <a class="badge badge-outline rounded-full chip-elevated" href="{{ resume.website }}" target="_blank" rel="noopener">Website</a>
              {% endif %}
              {% if resume and resume.github %}
                <a class="badge badge-outline rounded-full chip-elevated" href="{{ resume.github }}" target="_blank" rel="noopener">GitHub</a>
              {% endif %}
            </div>

            {% if resume and resume.downloadPdf %}
              <div class="mt-6">
                <a href="{{ resume.downloadPdf | url }}" class="btn btn-outline btn-sm rounded-full no-print">Download PDF</a>
              </div>
            {% endif %}
          {% endcall %}

          {% if resume and resume.summary %}
          {% from "components/neon-card.njk" import neonCard %}
          {% call neonCard({ title: "Summary", bodyCls: "prose prose-sm sm:prose-base dark:prose-invert max-w-none", neon: false, frame: 'none', rail: false }) %}
            <p class="mt-2 ink-soft">{{ resume.summary }}</p>
          {% endcall %}
          {% endif %}

          {# =========================
             HIGHLIGHTS — adaptive UI
             ========================= #}
          {% set _hc = 0 %}
          {% if resume and resume.highlights %}{% set _hc = resume.highlights | length %}{% endif %}
          {% if _hc %}
          {% from "components/neon-card.njk" import neonCard %}
          {% call neonCard({ title: "Highlights", neon: false, frame: 'none', rail: false }) %}

              {# few (≤3): stats row; mid (4–8): compact KPI cards; many (≥9): dense compact cards #}
              {% if _hc <= 3 %}
                <div class="mt-3">
                  <ul class="space-y-2" role="list">
                    {% for s in resume.highlights %}
                    <li class="hb-tabrow" role="listitem" {% if loop.index0 == 0 %}data-active="true"{% endif %}>
                      <div class="flex items-baseline justify-between gap-3">
                        <div class="hb-tablabel ink-soft">{{ s.title }}</div>
                        <div class="hb-tabvalue"><span class="kpi-badge text-glow-sm">{{ s.value }}</span></div>
                      </div>
                      {% if s.sub %}<div class="mt-1 hb-tabsub opacity-80 ink-soft">{{ s.sub }}</div>{% endif %}
                    </li>
                    {% endfor %}
                  </ul>
                </div>

              {% elif _hc <= 8 %}
                <div class="mt-3">
                  <ul class="space-y-2" role="list">
                    {% for s in resume.highlights %}
                    <li class="hb-tabrow" role="listitem" {% if loop.index0 == 0 %}data-active="true"{% endif %}>
                      <div class="flex items-baseline justify-between gap-3">
                        <div class="hb-tablabel ink-soft">{{ s.title }}</div>
                        <div class="hb-tabvalue"><span class="kpi-badge text-glow-sm">{{ s.value }}</span></div>
                      </div>
                      {% if s.sub %}<div class="mt-1 hb-tabsub opacity-80 ink-soft">{{ s.sub }}</div>{% endif %}
                    </li>
                    {% endfor %}
                  </ul>
                </div>

              {% else %}
                <div class="mt-3">
                  <ul class="space-y-2" role="list">
                    {% for s in resume.highlights %}
                    <li class="hb-tabrow" role="listitem">
                      <div class="flex items-baseline justify-between gap-3">
                        <div class="hb-tablabel ink-soft">{{ s.title }}</div>
                        <div class="text-xl font-semibold leading-tight"><span class="kpi-badge text-glow-sm">{{ s.value }}</span></div>
                      </div>
                      {% if s.sub %}<div class="mt-1 text-xs opacity-80 truncate ink-soft">{{ s.sub }}</div>{% endif %}
                    </li>
                    {% endfor %}
                  </ul>
                </div>
              {% endif %}
          {% endcall %}
          {% endif %}

          {% if resume and (resume.skills or resume.tools) %}
          {% from "components/neon-card.njk" import neonCard %}
          {% call neonCard({ title: "Skills & Tools", bodyCls: "cq-root cq-chips", neon: false, frame: 'none', rail: false }) %}

              {% if resume.skills and resume.skills.groups %}
                {% for g in resume.skills.groups %}
                  {% set _count = g.items | length %}
                  {% set _badgeSize = 'badge-sm' %}{% if _count > 12 %}{% set _badgeSize = 'badge-xs' %}{% endif %}
                  <h3 class="mt-3 text-sm font-semibold">{{ g.name }}</h3>
                  <div class="mt-2 flex flex-wrap gap-2">
                    {% for item in g.items %}
                      {% if item.hint %}
                        <span class="badge badge-ghost rounded-full chip-elevated tooltip" data-tip="{{ item.hint }}">{{ item.name }}</span>
                      {% else %}
                        <span class="badge badge-ghost rounded-full chip-elevated">{{ item.name }}</span>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endfor %}
              {% elif resume.skills %}
                <div class="mt-2 flex flex-wrap gap-2">
                  {% for s in resume.skills %}<span class="badge badge-ghost rounded-full chip-elevated">{{ s }}</span>{% endfor %}
                </div>
              {% endif %}

              {% if resume.tools %}
                <h3 class="mt-4 text-sm font-semibold">Tools</h3>
                <div class="mt-2 flex flex-wrap gap-2">
                  {% for t in resume.tools %}<span class="badge badge-ghost rounded-full chip-elevated">{{ t }}</span>{% endfor %}
                </div>
              {% endif %}
          {% endcall %}
          {% endif %}
        </div>
      </aside>

      <!-- RIGHT COLUMN -->
      <section class="col-span-12 lg:col-span-8 space-y-6">
        {% if resume and resume.experience %}
        {% from "components/neon-card.njk" import neonCard %}
        {% call neonCard({ title: "Experience", neon: false, frame: 'none', rail: false }) %}
            <div class="mt-3 hb-list">
              {% for job in resume.experience %}
              <article class="hb-row hb-anim">
                <div class="hb-ex">
                  <div class="hb-ex-head">
                    <h3 class="hb-ex-title text-lg font-semibold tracking-tight m-0 title-glow">
                      {{ job.company }}{% if job.role %} <span class="font-normal">— {{ job.role }}</span>{% endif %}
                    </h3>
                    <div class="hb-ex-meta text-xs md:text-sm opacity-90 flex flex-wrap items-center gap-2">
                      {% if job.location %}<span class="meta-chip">{{ job.location }}</span>{% endif %}
                      <span class="meta-chip">{{ job.start }}{% if job.end %} — {{ job.end }}{% else %} — Now{% endif %}</span>
                    </div>
                  </div>

                  {% if job.highlights %}
                  {% set _maxBul = 5 %}
                  <ul class="hb-ex-bullets mt-2 space-y-1.5 text-[15px] leading-6">
                    {% for h in job.highlights %}
                      {% if loop.index0 < _maxBul %}
                      <li class="hb-minirow hl-line ink-soft">{{ h }}</li>
                      {% endif %}
                    {% endfor %}
                  </ul>
                  {% if job.highlights | length > _maxBul %}
                  <details class="hb-ex-bullets mt-2">
                    <summary class="link text-sm opacity-80">Show {{ job.highlights | length - _maxBul }} more</summary>
                    <ul class="mt-2 space-y-1.5 text-[15px] leading-6">
                      {% for h in job.highlights %}
                        {% if loop.index0 >= _maxBul %}
                        <li class="hb-minirow hl-line ink-soft">{{ h }}</li>
                        {% endif %}
                      {% endfor %}
                    </ul>
                  </details>
                  {% endif %}
                  {% endif %}

                  {% if job.tags %}
                  {% set _jt = job.tags | length %}
                  {% set _jtSize = 'badge-sm' %}{% if _jt > 10 %}{% set _jtSize = 'badge-xs' %}{% endif %}
                  <div class="mt-3 flex flex-wrap gap-2 cq-chips">
                    {% for tag in job.tags %}<span class="badge badge-ghost rounded-full chip-elevated">{{ tag }}</span>{% endfor %}
                  </div>
                  {% endif %}
                </div>
              </article>
              {% endfor %}
            </div>
        {% endcall %}
        {% endif %}

        {% if resume and resume.projects %}
        {% from "components/neon-card.njk" import neonCard %}
        {% call neonCard({ title: "Selected Projects", bodyCls: "cq-root", neon: false, frame: 'none', rail: false }) %}
            <div class="mt-3 hb-list hb-list--cards">
              {% for p in resume.projects %}
              <article class="hb-row hb-anim hb-proj">
                <div class="hb-proj-inner proj-surface">
                  <div class="flex items-center gap-2">
                    <h3 class="text-base font-semibold m-0 title-glow">
                      {% if p.url %}<a href="{{ p.url }}" target="_blank" rel="noopener">{{ p.name }}</a>{% else %}{{ p.name }}{% endif %}
                    </h3>
                    {% if p.badge %}<span class="badge badge-neutral badge-sm rounded-full chip-elevated">{{ p.badge }}</span>{% endif %}
                  </div>
                  {% if p.subtitle %}<p class="hb-sub text-xs opacity-80 mt-1 ink-soft">{{ p.subtitle }}</p>{% endif %}
                  {% if p.blurb %}<p class="hb-blurb text-sm leading-6 mt-1.5 ink-soft">{{ p.blurb }}</p>{% endif %}
                  {% if p.tags %}
                  <div class="hb-tags mt-2 flex flex-wrap gap-2 cq-chips">
                    {% for t in p.tags %}<span class="badge badge-ghost rounded-full chip-elevated">{{ t }}</span>{% endfor %}
                  </div>
                  {% endif %}
                </div>
              </article>
              {% endfor %}
            </div>
        {% endcall %}
        {% endif %}

        {% if resume and resume.education %}
        {% from "components/neon-card.njk" import neonCard %}
        {% call neonCard({ title: "Education", neon: false, frame: 'none', rail: false }) %}
            <div class="mt-3 hb-list">
              {% for e in resume.education %}
              <article class="hb-row hl-line">
                <div class="flex items-baseline justify-between gap-3 flex-wrap">
                  <h3 class="text-base font-medium m-0 title-glow">{{ e.school }}</h3>
                  <div class="text-sm opacity-90"><span class="meta-chip">{{ e.start }}{% if e.end %} — {{ e.end }}{% endif %}</span></div>
                </div>
                <div class="text-sm opacity-90 mt-1 ink-soft">
                  {{ e.degree }}{% if e.meta %} — {{ e.meta }}{% endif %}
                </div>
              </article>
              {% endfor %}
            </div>
        {% endcall %}
        {% endif %}

        <!-- Footer -->
        <footer class="flex items-center justify-between pt-2 pb-10 no-print">
          <small class="opacity-60">
            {% if resume and resume.updated %}Last updated: {{ resume.updated | date('yyyy-MM-dd') }}{% endif %}
          </small>
          <div class="flex items-center gap-3">
            
            
          </div>
        </footer>
      </section>
    </div>
  </main>

  <!-- Toaster -->
  <div id="toaster" class="toast toast-end z-[100]"></div>

  <!-- JSON-LD (absolute URLs where possible) -->
  {% set sameAsLinks = [resume.website, resume.linkedin, resume.github] | compactUnique %}
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"Person",
    "name": {{ (resume and resume.name) | dump | safe }},
    "jobTitle": {{ (resume and resume.title) | dump | safe }},
    {% if ogImageHref %}"image": {{ ogImageHref | dump | safe }},{% endif %}
    {% if resume and resume.address %}
      "address": {{ resume.address | dump | safe }},
    {% elseif resume and resume.location %}
      "address": { "@type":"PostalAddress", "addressLocality": {{ resume.location | dump | safe }} },
    {% endif %}
    {% if resume and resume.email %}"email": "mailto:{{ resume.email }}",{% endif %}
    {% if sameAsLinks | length %}"sameAs": {{ sameAsLinks | dump | safe }},{% endif %}
    "url": {{ canonicalHref | dump | safe }}
  }
  </script>
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"BreadcrumbList",
    "itemListElement": [
      { "@type":"ListItem","position": 1,"name":"Home","item": {{ homeHref | dump | safe }} },
      { "@type":"ListItem","position": 2,"name":"Resume","item": {{ canonicalHref | dump | safe }} }
    ]
  }
  </script>

  <!-- Helpers -->
  <script>
    function toast(msg){
      var wrap=document.getElementById('toaster'); if(!wrap) return;
      var el=document.createElement('div'); el.className='alert alert-info shadow'; el.innerHTML='<span>'+msg+'</span>';
      wrap.appendChild(el); setTimeout(function(){el.style.opacity='0';},2200); setTimeout(function(){el.remove();},2600);
    }
    function copyToClipboard(text){
      try{navigator.clipboard.writeText(text).then(function(){toast('Copied: '+text);});}
      catch(e){
        var t=document.createElement('textarea'); t.value=text; document.body.appendChild(t); t.select();
        try{document.execCommand('copy'); toast('Copied: '+text);}catch(_){} t.remove();
      }
    }
    // Theme handled by shared ThemeUtils + theme-toggle scripts
  </script>
  <script src="/assets/js/theme-toggle.js" defer></script>
</body>
</html>
