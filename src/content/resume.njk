---
permalink: "/resume/"
title: "Resume"
layout: false
eleventyExcludeFromCollections: true
---

{# src/resume/index.njk — adaptive layout, subtle accents, canonical+absolute SEO, no rainbow #}
<!DOCTYPE html>
<html lang="en" class="scroll-pt-16 assertive-geometry" data-theme="nord">
<head>
  <!-- Meta -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <meta name="color-scheme" content="light dark">
  <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff">
  <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0b0b0e">
  <meta name="msapplication-TileColor" content="#0b0b0e">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

  {% from "macros/meta.njk" import buildPageTitle, buildPageDesc %}
  {% set pageTitle = buildPageTitle(resume, title) %}
  {% set pageDesc  = buildPageDesc(resume) %}

  {# Canonicals (prefer absolute when site.url is present) #}
  {% set canonicalPath = "/resume/" | url %}
  {% if site and site.url %}
    {% set canonicalHref = site.url + canonicalPath %}
  {% else %}
    {% set canonicalHref = canonicalPath %}
  {% endif %}
  {% set homePath = "/" | url %}
  {% if site and site.url %}
    {% set homeHref = site.url + homePath %}
  {% else %}
    {% set homeHref = homePath %}
  {% endif %}

  {# OG image absolute URL if possible #}
  {% if resume and resume.ogImage %}
    {% set ogImageRel = resume.ogImage | url %}
    {% if site and site.url %}
      {% set ogImageHref = site.url + ogImageRel %}
    {% else %}
      {% set ogImageHref = ogImageRel %}
    {% endif %}
  {% endif %}

  <title>{{ pageTitle }}</title>
  <link rel="canonical" href="{{ canonicalHref }}">
  <meta name="description" content="{{ pageDesc }}">

  <!-- Open Graph -->
  <meta property="og:type" content="profile">
  <meta property="og:title" content="{{ pageTitle }}">
  <meta property="og:description" content="{{ pageDesc }}">
  <meta property="og:url" content="{{ canonicalHref }}">
  {% if ogImageHref %}<meta property="og:image" content="{{ ogImageHref }}">{% endif %}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ pageTitle }}">
  <meta name="twitter:description" content="{{ pageDesc }}">
  {% if ogImageHref %}<meta name="twitter:image" content="{{ ogImageHref }}">{% endif %}

  <!-- Tailwind v4 + daisyUI v5 (site bundle) -->
  <link rel="stylesheet" href="/assets/css/app.css?v={{ build.hash or build.commit or build.version or buildTime }}">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=Rubik:wght@400..900&family=Space+Grotesk:wght@400..700&display=swap" rel="stylesheet">

  <!-- Skip-link, print polish, and toned accent system -->
  <style>
    :root{
      /* Subtle accent rail tied to theme tokens (no rainbow) */
      --hb-accent-start: hsl(var(--p));
      --hb-accent-end:   hsl(var(--s));
    }

    /* Accessibility skip link */
    .skip-link{position:absolute;left:-9999px;top:auto;width:1px;height:1px;overflow:hidden}
    .skip-link:focus{left:1rem;top:1rem;width:auto;height:auto;padding:.5rem .75rem;z-index:1000}

    /* Print smoothing */
    @media print{
      @page{margin:.6in}
      .no-print,.navbar{display:none!important}
      .shadow,.shadow-lg,.shadow-xl{box-shadow:none!important}
      body{background:#fff!important;color:#000!important}
      a{color:#000!important;text-decoration:none!important}
      .card{background:#fff!important;border-color:#ddd!important}
    }

    /* Accent rail */
    .hb-accent{position:relative}
    .hb-accent::before{
      content:"";position:absolute;inset-inline-start:-1px;top:8px;bottom:8px;width:3px;border-radius:999px;
      background:linear-gradient(180deg,var(--hb-accent-start) 0%,var(--hb-accent-end) 100%);
      opacity:.4;transform:scaleY(.72);transform-origin:center;transition:transform .2s ease,opacity .2s ease
    }

    /* Tab-like row styling for Highlights */
    .hb-tabrow{
      position:relative;width:100%;padding:.75rem 1rem;border-radius:12px;
      border:1px solid hsl(var(--bc)/.12);background-color:hsl(var(--b1)/.92);
      box-shadow:0 2px 6px rgba(0,0,0,.06);transition:box-shadow .2s ease,border-color .2s ease
    }
    .hb-tabrow::before{
      content:"";position:absolute;inset-inline-start:-1px;top:8px;bottom:8px;width:3px;border-radius:999px;
      background:linear-gradient(180deg,var(--hb-accent-start) 0%,var(--hb-accent-end) 100%);
      opacity:.5;transform:scaleY(.72);transform-origin:center;transition:transform .2s ease,opacity .2s ease
    }
    .hb-tabrow:hover{border-color:hsl(var(--p)/.38);box-shadow:0 6px 22px rgba(0,0,0,.10)}
    .hb-tabrow:hover::before{opacity:.75;transform:scaleY(1)}
    .hb-tabrow[data-active="true"]{border-color:hsl(var(--p)/.5);box-shadow:0 8px 28px rgba(0,0,0,.12)}
    .hb-tabrow[data-active="true"]::before{opacity:.9;transform:scaleY(1)}

    .hb-tablabel{font-size:11px;text-transform:uppercase;letter-spacing:.2em;opacity:.7}
    .hb-tabvalue{font-size:1.375rem;line-height:1.2;font-weight:700}
    .hb-tabsub{font-size:.75rem;opacity:.8}

    /* Title divider (quiet gradient) */
    .hb-title{position:relative;display:inline-flex;align-items:center;gap:.5rem}
    .hb-title::after{
      content:"";height:1px;width:48px;opacity:.45;
      background:linear-gradient(90deg,var(--hb-accent-start) 0%,var(--hb-accent-end) 100%)
    }

    /* Accent bullets */
    .hb-minirow{position:relative;padding-left:1rem;line-height:1.45}
    .hb-minirow::before{
      content:"";position:absolute;left:0;top:.6em;width:.4rem;height:.4rem;border-radius:50%;
      background:linear-gradient(180deg,var(--hb-accent-start),var(--hb-accent-end));opacity:.5
    }
  </style>
</head>

<body class="bg-base-100 text-base-content font-body antialiased selection:bg-primary/20">
  <a href="#main" class="skip-link btn btn-sm">Skip to main content</a>

  <!-- Top bar -->
  <div class="navbar bg-base-100/80 backdrop-blur border-b border-base-200 sticky top-0 z-40">
    <div class="flex-1">
      <a href="{{ '/' | url }}" class="btn btn-ghost text-base font-semibold">
        {{ resume and resume.name or 'Resume' }}
      </a>
    </div>
    <div class="flex-none gap-2 items-center">
      
      <div class="join no-print" role="group" aria-label="Theme switcher">
        <input class="join-item btn btn-sm btn-outline theme-controller hb-anim" type="radio" name="theme" aria-label="Nord" value="nord">
        <input class="join-item btn btn-sm btn-outline theme-controller hb-anim" type="radio" name="theme" aria-label="Business" value="business">
      </div>
      <button class="btn btn-sm btn-outline no-print hb-anim" onclick="window.print()" title="Print / Save PDF">Print</button>
    </div>
  </div>

  <!-- Main grid -->
  <main id="main" class="container mx-auto px-4 sm:px-6 lg:px-8 my-8">
    <div class="grid grid-cols-12 gap-6">
      <!-- LEFT RAIL (sticky on lg+) -->
      <aside class="col-span-12 lg:col-span-4">
        <div class="space-y-6 lg:sticky lg:top-6">
          <!-- Identity -->
          <section class="card shadow-sm border border-base-300/40 rounded-box hb-accent hb-neon hb-anim">
            <div class="card-body">
              <h1 class="text-4xl md:text-5xl font-black tracking-tight">
                {{ resume and resume.name or "Your Name" }}
              </h1>
              <p class="mt-2 text-lg opacity-80">
                {{ resume and resume.title or "Creative Technologist & Engineer" }}
              </p>

              <div class="mt-4 flex flex-wrap gap-2 text-sm items-center">
                {% if resume and resume.location %}
                  <span class="badge badge-outline rounded-full">{{ resume.location }}</span>
                {% endif %}
                {% if resume and resume.phoneNote %}
                  <span class="tooltip tooltip-bottom" data-tip="{{ resume.phoneNote }}">
                    <span class="badge badge-outline rounded-full">Phone on request</span>
                  </span>
                {% endif %}
                {% if resume and resume.email %}
                  <a class="badge badge-outline rounded-full" href="mailto:{{ resume.email }}" onclick="copyToClipboard('{{ resume.email | escape }}'); return false;" title="Copy email">{{ resume.email }}</a>
                {% endif %}
                {% if resume and resume.linkedin %}
                  <a class="badge badge-outline rounded-full" href="{{ resume.linkedin }}" target="_blank" rel="noopener">LinkedIn</a>
                {% endif %}
                {% if resume and resume.website %}
                  <a class="badge badge-outline rounded-full" href="{{ resume.website }}" target="_blank" rel="noopener">Website</a>
                {% endif %}
                {% if resume and resume.github %}
                  <a class="badge badge-outline rounded-full" href="{{ resume.github }}" target="_blank" rel="noopener">GitHub</a>
                {% endif %}
              </div>

              {% if resume and resume.downloadPdf %}
                <div class="mt-6">
                  <a href="{{ resume.downloadPdf | url }}" class="btn btn-outline btn-sm rounded-full no-print">Download PDF</a>
                </div>
              {% endif %}
            </div>
          </section>

          {% if resume and resume.summary %}
          <section class="card shadow-sm border border-base-300/40 rounded-box hb-accent hb-neon hb-anim">
            <div class="card-body prose prose-sm sm:prose-base dark:prose-invert max-w-none">
              <h2 class="m-0">Summary</h2>
              <p class="mt-2">{{ resume.summary }}</p>
            </div>
          </section>
          {% endif %}

          {# =========================
             HIGHLIGHTS — adaptive UI
             ========================= #}
          {% set _hc = 0 %}
          {% if resume and resume.highlights %}{% set _hc = resume.highlights | length %}{% endif %}
          {% if _hc %}
          <section class="card shadow-sm border border-base-300/40 rounded-box hb-accent">
            <div class="card-body">
              <h2 class="text-[11px] uppercase tracking-widest opacity-60 hb-title">Highlights</h2>

              {# few (≤3): stats row; mid (4–8): compact KPI cards; many (≥9): dense compact cards #}
              {% if _hc <= 3 %}
                <div class="mt-3">
                  <ul class="space-y-2" role="list">
                    {% for s in resume.highlights %}
                    <li class="hb-tabrow" role="listitem" {% if loop.index0 == 0 %}data-active="true"{% endif %}>
                      <div class="flex items-baseline justify-between gap-3">
                        <div class="hb-tablabel">{{ s.title }}</div>
                        <div class="hb-tabvalue">{{ s.value }}</div>
                      </div>
                      {% if s.sub %}<div class="mt-1 hb-tabsub">{{ s.sub }}</div>{% endif %}
                    </li>
                    {% endfor %}
                  </ul>
                </div>

              {% elif _hc <= 8 %}
                <div class="mt-3">
                  <ul class="space-y-2" role="list">
                    {% for s in resume.highlights %}
                    <li class="hb-tabrow" role="listitem" {% if loop.index0 == 0 %}data-active="true"{% endif %}>
                      <div class="flex items-baseline justify-between gap-3">
                        <div class="hb-tablabel">{{ s.title }}</div>
                        <div class="hb-tabvalue">{{ s.value }}</div>
                      </div>
                      {% if s.sub %}<div class="mt-1 hb-tabsub">{{ s.sub }}</div>{% endif %}
                    </li>
                    {% endfor %}
                  </ul>
                </div>

              {% else %}
                <div class="mt-3">
                  <ul class="space-y-2" role="list">
                    {% for s in resume.highlights %}
                    <li class="hb-tabrow" role="listitem">
                      <div class="flex items-baseline justify-between gap-3">
                        <div class="hb-tablabel">{{ s.title }}</div>
                        <div class="text-xl font-semibold leading-tight">{{ s.value }}</div>
                      </div>
                      {% if s.sub %}<div class="mt-1 text-xs opacity-80 truncate">{{ s.sub }}</div>{% endif %}
                    </li>
                    {% endfor %}
                  </ul>
                </div>
              {% endif %}
            </div>
          </section>
          {% endif %}

          {% if resume and (resume.skills or resume.tools) %}
          <section class="card shadow-sm border border-base-300/40 rounded-box hb-accent hb-neon hb-anim">
            <div class="card-body cq-root cq-chips">
              <h2 class="text-[11px] uppercase tracking-widest opacity-60 hb-title">Skills &amp; Tools</h2>

              {% if resume.skills and resume.skills.groups %}
                {% for g in resume.skills.groups %}
                  {% set _count = g.items | length %}
                  {% set _badgeSize = 'badge-sm' %}{% if _count > 12 %}{% set _badgeSize = 'badge-xs' %}{% endif %}
                  <h3 class="mt-3 text-sm font-semibold">{{ g.name }}</h3>
                  <div class="mt-2 flex flex-wrap gap-2">
                    {% for item in g.items %}
                      {% if item.hint %}
                        <span class="badge badge-ghost rounded-full tooltip" data-tip="{{ item.hint }}">{{ item.name }}</span>
                      {% else %}
                        <span class="badge badge-ghost rounded-full">{{ item.name }}</span>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endfor %}
              {% elif resume.skills %}
                <div class="mt-2 flex flex-wrap gap-2">
                  {% for s in resume.skills %}<span class="badge badge-ghost rounded-full">{{ s }}</span>{% endfor %}
                </div>
              {% endif %}

              {% if resume.tools %}
                <h3 class="mt-4 text-sm font-semibold">Tools</h3>
                <div class="mt-2 flex flex-wrap gap-2">
                  {% for t in resume.tools %}<span class="badge badge-ghost rounded-full">{{ t }}</span>{% endfor %}
                </div>
              {% endif %}
            </div>
          </section>
          {% endif %}
        </div>
      </aside>

      <!-- RIGHT COLUMN -->
      <section class="col-span-12 lg:col-span-8 space-y-6">
        {% if resume and resume.experience %}
        <section class="card shadow-sm border border-base-300/40 rounded-box">
          <div class="card-body">
            <h2 class="text-[11px] uppercase tracking-widest opacity-60 hb-title">Experience</h2>
            <div class="mt-3 hb-list">
              {% for job in resume.experience %}
              <article class="hb-row hb-accent hb-anim">
                <div class="hb-ex">
                  <div class="hb-ex-head">
                    <h3 class="hb-ex-title text-lg font-semibold tracking-tight m-0">
                      {{ job.company }}{% if job.role %} <span class="font-normal">— {{ job.role }}</span>{% endif %}
                    </h3>
                    <div class="hb-ex-meta text-xs md:text-sm opacity-70">
                      <span>{{ job.location }}</span>
                      <span class="mx-2 hidden md:inline">•</span>
                      <span class="block md:inline">{{ job.start }}{% if job.end %} — {{ job.end }}{% else %} — Now{% endif %}</span>
                    </div>
                  </div>

                  {% if job.highlights %}
                  {% set _maxBul = 5 %}
                  <ul class="hb-ex-bullets mt-2 space-y-1.5 text-[15px] leading-6">
                    {% for h in job.highlights %}
                      {% if loop.index0 < _maxBul %}
                      <li class="hb-minirow">{{ h }}</li>
                      {% endif %}
                    {% endfor %}
                  </ul>
                  {% if job.highlights | length > _maxBul %}
                  <details class="hb-ex-bullets mt-2">
                    <summary class="link text-sm opacity-80">Show {{ job.highlights | length - _maxBul }} more</summary>
                    <ul class="mt-2 space-y-1.5 text-[15px] leading-6">
                      {% for h in job.highlights %}
                        {% if loop.index0 >= _maxBul %}
                        <li class="hb-minirow">{{ h }}</li>
                        {% endif %}
                      {% endfor %}
                    </ul>
                  </details>
                  {% endif %}
                  {% endif %}

                  {% if job.tags %}
                  {% set _jt = job.tags | length %}
                  {% set _jtSize = 'badge-sm' %}{% if _jt > 10 %}{% set _jtSize = 'badge-xs' %}{% endif %}
                  <div class="mt-3 flex flex-wrap gap-2 cq-chips">
                    {% for tag in job.tags %}<span class="badge badge-ghost rounded-full">{{ tag }}</span>{% endfor %}
                  </div>
                  {% endif %}
                </div>
              </article>
              {% endfor %}
            </div>
          </div>
        </section>
        {% endif %}

        {% if resume and resume.projects %}
        <section class="card shadow-sm border border-base-300/40 rounded-box">
          <div class="card-body cq-root">
            <h2 class="text-[11px] uppercase tracking-widest opacity-60 hb-title">Selected Projects</h2>
            <div class="mt-3 hb-list">
              {% for p in resume.projects %}
              <article class="hb-row hb-accent hb-anim">
                <div>
                  <div class="flex items-center gap-2">
                    <h3 class="card-title text-sm">
                      {% if p.url %}<a href="{{ p.url }}" target="_blank" rel="noopener">{{ p.name }}</a>{% else %}{{ p.name }}{% endif %}
                    </h3>
                    {% if p.badge %}<span class="badge badge-neutral badge-sm rounded-full">{{ p.badge }}</span>{% endif %}
                  </div>
                  {% if p.subtitle %}<p class="mt-1 text-xs opacity-70">{{ p.subtitle }}</p>{% endif %}
                  {% if p.blurb %}<p class="mt-2 text-sm leading-6">{{ p.blurb }}</p>{% endif %}
                  {% if p.tags %}
                  <div class="mt-3 flex flex-wrap gap-2 cq-chips">
                    {% for t in p.tags %}<span class="badge badge-ghost rounded-full">{{ t }}</span>{% endfor %}
                  </div>
                  {% endif %}
                </div>
              </article>
              {% endfor %}
            </div>
          </div>
        </section>
        {% endif %}

        {% if resume and resume.education %}
        <section class="card shadow-sm border border-base-300/40 rounded-box">
          <div class="card-body">
            <h2 class="text-[11px] uppercase tracking-widest opacity-60 hb-title">Education</h2>
            <div class="mt-3 hb-list">
              {% for e in resume.education %}
              <article class="hb-row hb-accent">
                <div class="flex items-baseline justify-between gap-3 flex-wrap">
                  <h3 class="text-base font-medium m-0">{{ e.school }}</h3>
                  <div class="text-sm opacity-80">{{ e.start }}{% if e.end %} — {{ e.end }}{% endif %}</div>
                </div>
                <div class="text-sm opacity-90 mt-1">
                  {{ e.degree }}{% if e.meta %} — {{ e.meta }}{% endif %}
                </div>
              </article>
              {% endfor %}
            </div>
          </div>
        </section>
        {% endif %}

        <!-- Footer -->
        <footer class="flex items-center justify-between pt-2 pb-10 no-print">
          <small class="opacity-60">
            {% if resume and resume.updated %}Last updated: {{ resume.updated | date('yyyy-MM-dd') }}{% endif %}
          </small>
          <div class="flex items-center gap-3">
            
            <div class="join" role="group" aria-label="Theme switcher">
              <input class="join-item btn btn-sm btn-outline theme-controller hb-anim" type="radio" name="theme" aria-label="Nord" value="nord">
              <input class="join-item btn btn-sm btn-outline theme-controller hb-anim" type="radio" name="theme" aria-label="Business" value="business">
            </div>
          </div>
        </footer>
      </section>
    </div>
  </main>

  <!-- Toaster -->
  <div id="toaster" class="toast toast-end z-[100]"></div>

  <!-- JSON-LD (absolute URLs where possible) -->
  {% set sameAsLinks = [resume.website, resume.linkedin, resume.github] | compactUnique %}
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"Person",
    "name": {{ (resume and resume.name) | dump | safe }},
    "jobTitle": {{ (resume and resume.title) | dump | safe }},
    {% if ogImageHref %}"image": {{ ogImageHref | dump | safe }},{% endif %}
    {% if resume and resume.address %}
      "address": {{ resume.address | dump | safe }},
    {% elseif resume and resume.location %}
      "address": { "@type":"PostalAddress", "addressLocality": {{ resume.location | dump | safe }} },
    {% endif %}
    {% if resume and resume.email %}"email": "mailto:{{ resume.email }}",{% endif %}
    {% if sameAsLinks | length %}"sameAs": {{ sameAsLinks | dump | safe }},{% endif %}
    "url": {{ canonicalHref | dump | safe }}
  }
  </script>
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"BreadcrumbList",
    "itemListElement": [
      { "@type":"ListItem","position": 1,"name":"Home","item": {{ homeHref | dump | safe }} },
      { "@type":"ListItem","position": 2,"name":"Resume","item": {{ canonicalHref | dump | safe }} }
    ]
  }
  </script>

  <!-- Helpers -->
  <script>
    function toast(msg){
      var wrap=document.getElementById('toaster'); if(!wrap) return;
      var el=document.createElement('div'); el.className='alert alert-info shadow'; el.innerHTML='<span>'+msg+'</span>';
      wrap.appendChild(el); setTimeout(function(){el.style.opacity='0';},2200); setTimeout(function(){el.remove();},2600);
    }
    function copyToClipboard(text){
      try{navigator.clipboard.writeText(text).then(function(){toast('Copied: '+text);});}
      catch(e){
        var t=document.createElement('textarea'); t.value=text; document.body.appendChild(t); t.select();
        try{document.execCommand('copy'); toast('Copied: '+text);}catch(_){} t.remove();
      }
    }
    (function(){
      var key='theme';
      var allowed=['nord','business'];
      var radios=[].slice.call(document.querySelectorAll('.theme-controller'));
      document.documentElement.classList.add('assertive-geometry');

      function fromQuery(){
        try{
          var p=new URLSearchParams(location.search);
          var t=p.get('theme');
          if(t && allowed.indexOf(t)>=0){ return t; }
        }catch(_){}
        return null;
      }
      function fromStorage(){
        try{ var v=localStorage.getItem(key); if(v && allowed.indexOf(v)>=0) return v; }catch(_){}
        return null;
      }
      function preferred(){
        var dark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        return dark ? 'business' : 'nord';
      }
      function metaScheme(theme){ return (theme==='nord') ? 'light dark' : 'dark light'; }
      function apply(name, source){
        document.documentElement.setAttribute('data-theme', name);
        document.documentElement.dataset.themeSource = source || 'init';
        try{ localStorage.setItem(key, name); }catch(_){}
        var meta=document.querySelector('meta[name="color-scheme"]');
        if(meta){ meta.content = metaScheme(name); }
        radios.forEach(function(r){ r.checked = (r.value === name); });
        try{ document.dispatchEvent(new CustomEvent('themechange', { detail: { theme: name, source: source||'user' } })); }catch(_){}
      }
      var picked = fromQuery() || fromStorage() || preferred();
      apply(picked, fromQuery() ? 'query' : (fromStorage() ? 'storage' : 'os'));
      document.addEventListener('change', function(e){
        var t=e.target; if(t && t.classList && t.classList.contains('theme-controller')){ apply(t.value, 'radio'); toast('Theme: '+t.value); }
      });
    })();
  </script>
</body>
</html>
