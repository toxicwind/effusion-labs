{# src/_includes/layouts/embed.njk
   Minimal, self-contained layout for embedded/auto pages (interlinker).
   Uses the same CSS pipeline; no global header/nav to keep it portable. #}
<!doctype html>
<html lang="en" class="scroll-pt-10" data-theme="dim">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover" />
  <meta name="color-scheme" content="dark light" />
  <title>{{ title or "Embed" }}</title>

  {# Optional canonical, if present #}
  {% if page and page.url %}<link rel="canonical" href="{{ page.url | url }}">{% endif %}

  {# App CSS â€” version with build hash when available #}
  <link rel="stylesheet" href="/src/assets/css/app.css{% if build and (build.hash or build.commit or build.version) %}?v={{ build.hash or build.commit or build.version }}{% endif %}">
</head>
<body class="bg-base-100 text-base-content font-body antialiased">
  <main class="mx-auto max-w-screen-lg px-4 sm:px-6 lg:px-8 py-8">
    <section
      class="rounded-box border-2 border-black bg-base-200 shadow-[8px_8px_0_rgba(0,0,0,0.9)] hb-neon hb-intensity-lite"
      style="--neon-a: oklch(0.72 0.18 280); --neon-b: oklch(0.82 0.14 30);"
    >
      <div class="p-5 sm:p-7">
        {% if title %}
          <h1 class="m-0 font-extrabold tracking-tight text-2xl sm:text-3xl">{{ title }}</h1>
        {% endif %}
        {% if description %}
          <p class="mt-2 opacity-80">{{ description }}</p>
        {% endif %}

        <div class="prose dark:prose-invert max-w-none mt-5">
          {{ content | safe }}
        </div>
      </div>
    </section>
  </main>

  {# Optional overlay CSS (if you ship it) #}
  <link rel="stylesheet" href="/src/assets/css/mschf-overlay.css{% if build and (build.hash or build.commit or build.version) %}?v={{ build.hash or build.commit or build.version }}{% endif %}">
</body>
</html>
