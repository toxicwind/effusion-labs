{% macro resumeEntry(job) %}
  <section class="mb-6">
    <h2 class="text-xl font-semibold">{{ job.role }} — {{ job.company }}</h2>
    <p class="text-sm opacity-70">{{ job.start }}{% if job.end %}–{{ job.end }}{% else %}–present{% endif %}</p>
    {% if job.highlights %}
      <ul class="mt-2 list-disc pl-4">
      {% for h in job.highlights %}
        <li>{{ h }}</li>
      {% endfor %}
      </ul>
    {% endif %}
  </section>
{% endmacro %}
