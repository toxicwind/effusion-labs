{# External link: keep your .external-link style but layer daisyUI's link UX #}
{% from "components/icons.njk" import icon %}
{% macro extLink(url, text) -%}
<a
  href="{{ url }}"
  class="external-link link link-hover inline-flex items-center gap-1"
  target="_blank"
  rel="noopener noreferrer"
  data-external="true"
>
  <span>{{ text }}</span>
  <span aria-hidden="true" class="inline-block">
    {{ icon('external-link', { class: 'w-4 h-4', 'aria-hidden': 'true' }) }}
  </span>
  <span class="sr-only">(opens in a new tab)</span>
</a>
{%- endmacro %}
