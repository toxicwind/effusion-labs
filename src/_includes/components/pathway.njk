  {% for node in path %}
    {% if not loop.first %}<span aria-hidden="true" class="opacity-60">â†’</span>{% endif %}
    {% set u = node.url or '#' %}
    {% if u and u[0] == '/' %}{% set u = u | url %}{% endif %}
    <a href="{{ u }}"
       class="link link-hover underline-offset-2 decoration-dotted rounded-sm px-0.5
              focus:outline-none focus-visible:ring focus-visible:ring-primary/40">
      {{ node.title }}
    </a>
  {% endfor %}
</nav>
{% endmacro %}