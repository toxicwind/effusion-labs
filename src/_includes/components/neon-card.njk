{% macro neonCard(opts = {}) %}
  {# opts: { title?: string, bodyCls?: string, sectionCls?: string, intensity?: 'lite'|'bold', neon?: bool, frame?: 'ring'|'none', rail?: bool } #}
  {% set _title = opts.title or '' %}
  {% set _bodyCls = 'px-5 py-4 sm:px-6 sm:py-5 ' ~ (opts.bodyCls or '') %}
  {% set _intensity = opts.intensity or 'lite' %}
  {% set _neon = (opts.neon is not defined) or (opts.neon != false) %}
  {% set _frame = opts.frame or 'ring' %}
  {% set _rail = (opts.rail is not defined) or (opts.rail != false) %}
  {% set _sectionCls = (opts.sectionCls or '') ~ ' ' ~ ('hb-intensity-' ~ _intensity) %}

  {# build class string without array.concat #}
  {% set _cls = 'card rounded-box hb-anim ' ~ _sectionCls %}
  {% if _neon %}{% set _cls = _cls ~ ' hb-neon' %}{% endif %}
  {% if _rail %}{% set _cls = _cls ~ ' hb-accent' %}{% endif %}
  {% if _frame == 'ring' %}
    {% set _cls = _cls ~ ' shadow-xs ring-1 ring-base-300/35 border-transparent' %}
  {% else %}
    {% set _cls = _cls ~ ' shadow-none border-transparent' %}
  {% endif %}

  <section class="{{ _cls }}">
    <div class="card-body {{ _bodyCls }}">
      {% if _title %}
        <h2 class="text-[11px] uppercase tracking-widest opacity-60 hb-title">{{ _title }}</h2>
      {% endif %}
      {{ caller() }}
    </div>
  </section>
{% endmacro %}