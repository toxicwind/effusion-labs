{% macro neonCard(opts = {}) %}
  {# opts: { title?: string, bodyCls?: string, sectionCls?: string, intensity?: 'lite'|'bold' } #}
  {% set _title = opts.title or '' %}
  {% set _bodyCls = 'px-5 py-4 sm:px-6 sm:py-5 ' ~ (opts.bodyCls or '') %}
  {% set _intensity = opts.intensity or 'lite' %}
  {% set _sectionCls = (opts.sectionCls or '') + ' ' + ('hb-intensity-' ~ _intensity) %}
  <section class="card shadow-xs ring-1 ring-base-300/35 border-transparent rounded-box hb-accent hb-neon hb-anim {{ _sectionCls }}">
    <div class="card-body {{ _bodyCls }}">
      {% if _title %}
        <h2 class="text-[11px] uppercase tracking-widest opacity-60 hb-title">{{ _title }}</h2>
      {% endif %}
      {{ caller() }}
    </div>
  </section>
{% endmacro %}
