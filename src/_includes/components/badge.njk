{# Badge: switch to daisyUI badge, theme-aware borders & hover #}
{% macro badge(text, href) -%}
<a
  href="{{ href }}"
  class="badge badge-outline badge-sm no-underline transition-colors hover:border-primary hover:text-primary focus:outline-none focus-visible:ring focus-visible:ring-primary/40"
>
  {{ text }}
</a>
{%- endmacro %}