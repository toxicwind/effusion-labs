{% macro feedEntry(item) %}
<li data-type="{{ item.type }}">
  <a href="{{ item.url }}" class="card">
    <span class="chip">{{ item.type | capitalize }}</span>
    <h3>{{ item.data.title }}</h3>
    {% if item.data.description %}
    <p>{{ item.data.description | truncate(140, true, 'â€¦') }}</p>
    {% endif %}
  </a>
</li>
{% endmacro %}
