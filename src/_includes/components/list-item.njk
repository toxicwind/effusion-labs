{% macro listItem(item) %}
<a href="{{ item.url }}" aria-label="{{ item.data.title }}" class="block rounded-xl border border-white/20 bg-white/5 p-6 shadow-sm transition hover:bg-white/10 hover:shadow-md focus:outline-none focus:ring">
  <div class="flex items-center justify-between">
    <h3 class="font-heading text-lg text-gray-100">{{ item.data.title }}</h3>
    {% if item.date | isNew %}
    <span class="rounded-full bg-blue-600 px-2 py-0.5 text-[10px] font-medium text-white">New</span>
    {% endif %}
  </div>
  {% if item.data.description %}
  <p class="mt-1 text-sm text-gray-300">{{ item.data.description | truncate(120) }}</p>
  {% endif %}
  <div class="mt-2 flex items-center justify-between text-xs text-gray-400">
    {% if item.data.type %}
    <span class="capitalize">{{ item.data.type }}{% if item.data.status %} [{{ item.data.status }}]{% endif %}</span>
    {% elif item.data.status %}
    <span>[{{ item.data.status }}]</span>
    {% endif %}
    {% if item.date %}<time datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>{% endif %}
  </div>
</a>
{% endmacro %}
