{# components/provenance-list.njk #}
{% macro provenanceList(sources) %}
{% if sources and sources.length %}
<ul class="provenance-list list-disc pl-5 space-y-1 text-sm text-base-content/80" data-testid="provenance">
  {% for s in sources %}
    <li>
      <a href="{{ s.url }}" class="link link-hover" title="{{ s.url }}">{{ s.url | hostname }}</a>
      {% if s.retrieved_at %}
        <time class="ml-2 opacity-70" datetime="{{ s.retrieved_at }}">
          {{ s.retrieved_at | humanDate | safe }}
        </time>
      {% endif %}
    </li>
  {% endfor %}
</ul>
{% endif %}
{% endmacro %}
