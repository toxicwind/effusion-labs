{% from "components/products/Badges.njk" import marketBadges, availabilityBadge %}
{% macro specSheet(p) %}
<dl class="spec-sheet grid gap-2 md:grid-cols-[max-content_auto]" data-testid="spec-sheet">
  {% if p.brand %}<dt>Brand</dt><dd>{{ p.brand | titleizeSlug }}</dd>{% endif %}
  {% if p.line %}<dt>Line</dt><dd>{{ p.line | titleizeSlug }}</dd>{% endif %}
  {% if p.character %}<dt>Character</dt><dd>{{ p.character | titleizeSlug }}</dd>{% endif %}
  {% if p.series %}<dt>Series</dt><dd>{{ p.series | titleizeSlug }}</dd>{% endif %}
  {% if p.form %}<dt>Form</dt><dd>{{ p.form | titleizeSlug }}</dd>{% endif %}
  {% if p.variant %}<dt>Variant</dt><dd>{{ p.variant | titleizeSlug }}</dd>{% endif %}
  {% if p.edition and p.edition.kind %}<dt>Edition</dt><dd>{{ p.edition.kind | titleizeSlug }}</dd>{% endif %}
  {% if p.release_date %}<dt>Release Date</dt><dd>{{ p.release_date | humanDate | safe }}</dd>{% endif %}
  {% if p.distribution and p.distribution.region_lock != undefined %}<dt>Region Lock</dt><dd>{{ p.distribution.region_lock | yesNo }}</dd>{% endif %}
  {% if p.distribution and p.distribution.markets %}<dt>Markets</dt><dd>{{ marketBadges(p.distribution.markets) | safe }}</dd>{% endif %}
  {% if p.availability and p.availability.limited != undefined %}<dt>Limited</dt><dd>{{ availabilityBadge(p.availability.limited) | safe }}</dd>{% endif %}
  {% if p.availability and p.availability.unit_count %}<dt>Unit Count</dt><dd>{{ p.availability.unit_count }}</dd>{% endif %}
  {% if p.confidence != undefined %}<dt>Confidence</dt><dd>{{ p.confidence }}</dd>{% endif %}
</dl>
{% endmacro %}
