{% macro offerCard(o) %}
<div class="card bg-base-200 border border-base-300 shadow-sm">
  <div class="card-body gap-4">
    <h3 class="card-title font-mono">{{ o.name }}</h3>
    <p class="font-mono text-sm opacity-80">{{ o.dur }}</p>
    <p>{{ o.desc }}</p>
    <ul class="mt-4 space-y-2">
      {% for feature in o.features %}
      <li class="flex items-start gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mt-1 flex-none" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
        <span>{{ feature }}</span>
      </li>
      {% endfor %}
    </ul>
    <div class="mt-auto pt-4">
      <a href="{{ o.href }}" class="btn w-full {% if o.primary %}btn-primary{% else %}btn-outline{% endif %}">{{ o.cta }}</a>
    </div>
  </div>
</div>
{% endmacro %}

