<!DOCTYPE html>
<html lang="en" data-theme="business">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover">
  <title>{{ DATA.alt }} | AI Safety Specialist - Eliminate Hallucinations &amp; Data Leaks</title>
  <meta name="description" content="{{ DATA.desc }}">
  <meta name="keywords" content="AI safety specialist, LLM security, hallucination prevention, prompt injection defense, RAG system security, AI reliability consultant">
  <meta property="og:title" content="AI Safety Specialist - Make Your LLM Bulletproof | {{ DATA.brand }}">
  <meta property="og:description" content="{{ DATA.desc }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ DATA.url }}">
  <meta property="og:image" content="https://effusionlabs.com/assets/og-ai-safety.jpg">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="AI Safety Specialist - Eliminate Hallucinations | {{ DATA.brand }}">
  <meta name="twitter:description" content="Top-10 global adversarial expert. We make enterprise AI systems bulletproof against failures, leaks, and attacks.">
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" as="style">
  <script src="/assets/js/theme-utils.js"></script>
  <script>ThemeUtils.configure({ allowed: ['nord','night','business','light','dark'], defaultTheme: 'business', darkTheme: 'business' }); ThemeUtils.initEarly();</script>
  <link rel="stylesheet" href="/assets/css/app.css?v={{ build.hash or build.commit or build.version or buildTime }}">
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen">
  <header class="border-b">
    <nav class="navbar mx-auto max-w-[90rem]">
      <div class="navbar-start">
        <a href="/" class="w-8 h-8 rounded-full bg-primary flex items-center justify-center font-mono font-bold text-base-100">E</a>
      </div>
      <div class="navbar-end">
        <a href="#contact" class="btn btn-sm btn-primary">Emergency Assessment</a>
      </div>
    </nav>
  </header>
  <main class="mx-auto max-w-[90rem] px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap justify-center gap-2 py-4">
      {% for item in DATA.social_proof.items %}
        <span class="badge badge-outline font-mono">{{ item }}</span>
      {% endfor %}
    </div>
    <section class="hero py-16">
      <div class="hero-content grid gap-10 lg:grid-cols-2">
        <div class="min-w-0">
          <p class="font-mono text-sm text-info mb-2">{{ DATA.hero.kicker }}</p>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6">{{ DATA.hero.headline }}</h1>
          <p class="mb-6 max-w-prose">{{ DATA.hero.about }}</p>
          <div class="flex flex-wrap gap-4">
            {% for act in DATA.hero.actions %}
              <a href="{{ act.href }}" class="btn {% if act.primary %}btn-primary{% else %}btn-outline{% endif %}">{{ act.label }}</a>
            {% endfor %}
          </div>
        </div>
        <div class="lg:relative">
          <div class="mockup-code w-fit max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto lg:absolute lg:right-[-8rem] lg:bottom-4">
            {% for l in DATA.hero.code %}
              {% set isBreach = 'BREACH' in l %}
              {% set isCrit = 'CRITICAL' in l %}
              {% set isInfo = ('//' in l) or ('Executing' in l) %}
              <pre data-prefix="{% if isBreach or isCrit %}⚠{% elif isInfo %}//{% else %}${% endif %}" class="{% if isBreach %}text-error font-semibold{% elif isCrit %}text-warning font-semibold{% elif isInfo %}text-info{% else %}text-success{% endif %}"><code>{{ l }}</code></pre>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
    <section class="mb-24">
      <h2 class="text-3xl font-bold text-center mb-8">{{ DATA.metrics.headline }}</h2>
      <p class="text-center font-mono mb-8">{{ DATA.metrics.sub }}</p>
      <div class="stats shadow">
        {% for m in DATA.metrics.items %}
          <div class="stat">
            <div class="stat-title">{{ m.name }}</div>
            <div class="stat-value font-mono">{{ m.value }}</div>
            <div class="stat-desc">{{ m.desc }}</div>
          </div>
        {% endfor %}
      </div>
    </section>
    <section id="interventions" class="mb-24">
      <h2 class="text-3xl font-bold text-center mb-12">Surgical Interventions</h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {% for o in DATA.offers %}
          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title">{{ o.name }}</h3>
              <p class="font-mono text-sm text-base-content/70">{{ o.dur }}</p>
              <p class="mt-2">{{ o.desc }}</p>
              <ul class="mt-4 space-y-2">
                {% for f in o.features %}
                  {{ bullet(f) }}
                {% endfor %}
              </ul>
              <div class="card-actions mt-6">
                <a href="{{ o.href }}" class="btn w-full {% if o.primary %}btn-primary{% else %}btn-outline{% endif %}">{{ o.cta }}</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
    <section id="protocol" class="mb-24">
      <h2 class="text-3xl font-bold text-center mb-8">{{ DATA.methodology.headline }}</h2>
      <ul class="steps steps-vertical lg:steps-horizontal">
        {% for step in DATA.methodology.pillars %}
          <li class="step step-primary">
            <h3 class="font-mono font-bold">{{ step.name }}</h3>
            <p class="text-sm mt-2 max-w-xs">{{ step.text }}</p>
          </li>
        {% endfor %}
      </ul>
      <div class="mt-8 p-6 border-l-4 border-primary bg-base-200 max-w-prose mx-auto">
        <p class="font-bold">{{ DATA.methodology.conclusion }}</p>
      </div>
    </section>
    <section id="contact" class="mb-24">
      <h2 class="text-3xl font-bold text-center mb-6">{{ DATA.cta.headline }}</h2>
      <p class="text-center mb-8 max-w-prose mx-auto">{{ DATA.cta.text }}</p>
      <form name="consulting-contact" method="POST" data-netlify="true" netlify action="/success/" class="grid gap-6 max-w-2xl mx-auto">
        <input type="hidden" name="form-name" value="consulting-contact">
        <div class="form-control">
          <label for="name" class="label"><span class="label-text font-mono">Your Name</span></label>
          <input id="name" type="text" name="name" class="input input-bordered" required>
        </div>
        <div class="form-control">
          <label for="email" class="label"><span class="label-text font-mono">Your Email</span></label>
          <input id="email" type="email" name="email" class="input input-bordered" required>
        </div>
        <div class="form-control">
          <label for="context" class="label"><span class="label-text font-mono">Describe Current AI Failures</span></label>
          <textarea id="context" name="context" class="textarea textarea-bordered h-32" aria-describedby="context-help"></textarea>
          <span id="context-help" class="text-sm mt-1">Hallucinations, data leaks, prompt injections, latency issues, user complaints...</span>
        </div>
        <div class="form-control">
          <button type="submit" class="btn btn-primary w-full">{{ DATA.cta.btn }}</button>
        </div>
      </form>
    </section>
  </main>
  <footer class="footer items-center p-4 border-t">
    <div class="items-center grid-flow-col mx-auto">
      <span class="w-8 h-8 rounded-full bg-primary flex items-center justify-center font-mono font-bold text-base-100">E</span>
      <p class="font-mono">{{ DATA.slogan }}</p>
      <p class="font-mono">© {{ 'now' | date('yyyy') }}</p>
    </div>
  </footer>
  <script type="application/ld+json">
  {{ {
    "@context": "https://schema.org",
    "@type": "ProfessionalService",
    "name": DATA.brand,
    "url": DATA.url,
    "description": DATA.desc,
    "email": DATA.email,
    "slogan": DATA.slogan,
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Services",
      "itemListElement": [
        {% for o in DATA.offers %}
        {
          "@type": "Offer",
          "name": o.name,
          "itemOffered": {
            "@type": "Service",
            "name": o.name,
            "description": o.desc
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  } | dump | safe }}
  </script>
</body>
</html>

