          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "{{ offer.name }}",
            "description": "{{ offer.desc }}"
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  }
  </script>
</body>
</html>
