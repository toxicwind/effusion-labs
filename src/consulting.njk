  <!-- DaisyUI (includes Tailwind) via CDN -->
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />

  <!-- Google Fonts CDN -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">

  <style>
    html{scroll-behavior:smooth}
    body{
      font-family:Inter,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,sans-serif;
      background: linear-gradient(135deg, hsl(var(--b3)) 0%, hsl(var(--b1)) 100%);
      color: hsl(var(--bc));
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      line-height:1.6;
    }

    /* --- Minimal tokens to keep prior aesthetics sane on CDN-only build --- */
    .font-mono{font-family:"Roboto Mono",ui-monospace,SFMono-Regular,Menlo,Monaco,monospace}

    /* Fluid type */
    .hb-fluid-h1{font-size:clamp(2.4rem, 3.2vw + 1rem, 4.25rem)}
    .hb-fluid-h2{font-size:clamp(1.8rem, 1.6vw + 1rem, 2.6rem)}
    .hb-fluid-kicker{font-size:clamp(1rem, .6vw + .75rem, 1.25rem); letter-spacing:.02em}

    /* Headline feel */
    .hyper-title{font-weight:900; letter-spacing:-.02em; line-height:.95}

    /* Subtle underline accent using theme vars */
    .hb-underline{position:relative}
    .hb-underline::after{
      content:""; position:absolute; left:0; bottom:-6px; height:3px; width:72px;
      background: linear-gradient(90deg, hsl(var(--p)) 0%, hsl(var(--a)) 100%);
      border-radius:2px
    }

    /* Card + chrome */
    .chunky{border:1.5px solid hsl(var(--b3)); background: linear-gradient(135deg, hsl(var(--b2)) 0%, hsl(var(--b1)) 100%);
      box-shadow:0 12px 24px rgba(0,0,0,.25), 0 1px 0 rgba(255,255,255,.04) inset; border-radius:10px; position:relative; overflow:hidden; transition:.2s}
    .chunky:hover{transform:translateY(-2px); box-shadow:0 16px 28px rgba(0,0,0,.30)}
    .chunky::before{content:''; position:absolute; top:0; left:-60%; width:60%; height:2px;
      background: linear-gradient(90deg, transparent, color-mix(in oklab, hsl(var(--p)) 35%, transparent), transparent);
      opacity:.25; animation:shimmer 6s linear infinite}
    @keyframes shimmer{0%{left:-60%}100%{left:100%}}

    /* Grid helper */
    .hero-content.grid{display:grid !important}

    /* Right-bleed console helpers */
    :where(.chunky).hb-overflow-visible{overflow:visible !important}
    .hb-bleed-r{margin-right:-4rem}
    .hb-nudge{transform:translateY(-2px)}
    .hb-open-r{border-right-color:transparent !important}
    .hb-card-limit{max-width:clamp(46rem,68vw,64rem)}
    .hb-lean-left{margin-right:auto}
    .hb-console{display:inline-block; width:fit-content; max-width:min(80ch,100%); overflow:visible}
    .hb-console{max-height:clamp(14rem,38vh,28rem)}
    #top .mockup-code{display:inline-block; width:fit-content; max-width:min(80ch,100%); overflow:visible; margin-left:auto}
    @media (min-width:1024px){
      .lg\:hb-bleed-r{margin-right:-8rem}
      .lg\:hb-console{max-width:min(96ch,100%)}
      .lg\:hb-float-cr{position:absolute; top:46%; right:-8rem; transform:translateY(-50%); z-index:10}
    }
    @media (min-width:1536px){
      .lg\:hb-float-cr{top:44%; right:-12rem}
      #top .mockup-code{max-width:min(104ch,100%)}
    }

    /* Background accents */
    .hb-grid{background-image:
        radial-gradient(circle at 2px 2px, rgba(16,185,129,.15) 1px, transparent 0),
        linear-gradient(to right, rgba(255,255,255,.03) 1px, transparent 1px),
        linear-gradient(to bottom, rgba(255,255,255,.03) 1px, transparent 1px);
      background-size:40px 40px, 20px 20px, 20px 20px}
    .hb-bg-hyper{background-blend-mode:overlay}
    .hb-vignette{box-shadow:inset 0 0 120px rgba(0,0,0,.25)}
    .hb-noise{position:relative}
    .hb-noise::before{content:""; position:fixed; inset:0; pointer-events:none; opacity:.06;
      background-image:url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width=\"140\" height=\"140\" viewBox=\"0 0 140 140\"><filter id=\"n\"><feTurbulence type=\"fractalNoise\" baseFrequency=\"0.8\" numOctaves=\"2\" stitchTiles=\"stitch\"/></filter><rect width=\"100%\" height=\"100%\" filter=\"url(%23n)\" opacity=\"0.35\"/></svg>')}

    /* “Neon-ish” containers that still read well on emerald */
    .hb-neon{box-shadow: 0 0 0 1px hsl(var(--p)/.35), 0 8px 24px hsl(var(--p)/.18)}
    .hb-inlay{background:linear-gradient(180deg, hsl(var(--b2)) 0%, hsl(var(--b1)) 100%); border:1px solid hsl(var(--b3))}
    .hb-brut-card{border:2px solid hsl(var(--b3))}
    .hb-accent{border-color:hsl(var(--p))}
    .hb-accent-top{border-top-color:hsl(var(--p))}
    .hb-bevel{box-shadow:0 1px 0 rgba(255,255,255,.05) inset, 0 -1px 0 rgba(0,0,0,.1) inset}
    .hb-shadow-brut{box-shadow:0 8px 0 rgba(0,0,0,.35)}

    /* Small deco bits */
    .hb-logo{display:inline-grid; place-items:center; width:2rem; height:2rem; border-radius:.375rem; border:2px solid hsl(var(--p)); background:hsl(var(--b2))}
    .hb-logo-core{font-weight:800; color:hsl(var(--p))}
    .hb-scanbar{height:6px; border-radius:6px; background:linear-gradient(90deg, hsl(var(--p)) 0%, hsl(var(--a)) 100%)}
    .hb-num-outline{filter:drop-shadow(0 1px 0 rgba(0,0,0,.25))}
    .hb-plasma{box-shadow:0 0 0 2px hsl(var(--b3)) inset, 0 6px 18px hsl(var(--p)/.25)}
    .hb-stripes{background-image:linear-gradient(45deg, hsl(var(--p)/.06) 25%, transparent 25%, transparent 50%, hsl(var(--p)/.06) 50%, hsl(var(--p)/.06) 75%, transparent 75%, transparent); background-size:12px 12px}
    .hb-anim{transition:transform .2s ease}
    .copy p{line-height:1.75; margin-bottom:1.2em} .copy p:last-child{margin-bottom:0}
    .min-w-0{min-width:0}
  </style>

  {# JSON-LD offers list #}
  {% set itemList = [] %}
  {% for o in DATA.offers %}
