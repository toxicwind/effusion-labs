        </div>
        {% endfor %}
      </div>
      <div class="mt-8 p-6 bg-base-200 border-l-4 border-primary">
        <p class="font-bold">{{ DATA.methodology.conclusion }}</p>
      </div>
    </section>
    <section id="contact" class="my-16">
      <h2 class="text-3xl font-bold mb-4">{{ DATA.cta.headline }}</h2>
      <p class="mb-6">{{ DATA.cta.text }}</p>
