<!DOCTYPE html>
<html lang="en" data-theme="business">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}</title>
  <meta name="description" content="We eliminate hallucinations, jailbreaks, and leaks so your LLM ships safe. Immediate containment, permanent control." />
  <meta property="og:title" content="AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}" />
  <meta property="og:description" content="{{ DATA.desc }}" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="{{ DATA.url }}" />
  <meta property="og:image" content="https://effusionlabs.com/assets/og-ai-safety.jpg" />
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" as="style">
  <script src="/assets/js/theme-utils.js"></script>
  <script>ThemeUtils.configure({ allowed: ['nord','night','business','light','dark'], defaultTheme: 'business', darkTheme: 'business' }); ThemeUtils.initEarly();</script>
  <link rel="stylesheet" href="/assets/css/app.css?v={{ build.hash or build.commit or build.version or buildTime }}" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
  {% set ldOffers = [] %}
  {% for o in DATA.offers %}
    {% set ldOffers = ldOffers.concat([{"@type":"Offer","name":o.name,"itemOffered":{"@type":"Service","name":o.name,"description":o.desc}}]) %}
  {% endfor %}
  <script type="application/ld+json">
    {{ {
      "@context":"https://schema.org",
      "@type":"ProfessionalService",
      "name":DATA.brand,
      "url":DATA.url,
      "email":DATA.email,
      "slogan":DATA.slogan,
      "description":DATA.desc,
      "hasOfferCatalog":{
        "@type":"OfferCatalog",
        "name":"Services",
        "itemListElement":ldOffers
      }
    } | dump | safe }}
  </script>
</head>
<body class="min-h-screen flex flex-col">
  <nav class="navbar border-b border-base-300">
    <div class="navbar-start">
      <a href="/" class="btn btn-ghost text-xl font-mono">{{ DATA.alt }}</a>
    </div>
    <div class="navbar-end">
      <a href="#contact" class="btn btn-primary btn-sm">Emergency Assessment</a>
    </div>
  </nav>
  <main class="flex-grow">
    <section class="hero py-16 relative">
      <div class="hero-content flex-col items-start max-w-5xl mx-auto min-w-0">
        <div class="max-w-xl min-w-0">
          <p class="font-mono text-sm uppercase tracking-widest text-secondary mb-2">{{ DATA.hero.kicker }}</p>
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ DATA.hero.headline }}</h1>
          <p class="mb-6">{{ DATA.hero.about }}</p>
          <div class="flex flex-col sm:flex-row gap-4">
            {% for action in DATA.hero.actions %}
              <a href="{{ action.href }}" class="btn {{ action.primary ? 'btn-primary' : 'btn-outline' }}">{{ action.label }}</a>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="mockup-code [&_pre]:whitespace-pre w-fit max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto lg:overflow-x-visible lg:absolute lg:right-[-8rem] lg:bottom-4 mt-8 lg:mt-0">
        {% for l in DATA.hero.code %}
          {% set isBreach = 'BREACH' in l %}
          {% set isCrit = 'CRITICAL' in l %}
          {% set isInfo = ('//' in l) or ('Executing' in l) %}
          <pre data-prefix="{% if isBreach or isCrit %}⚠{% elif isInfo %}//{% else %}${% endif %}" class="{% if isBreach %}text-error font-semibold{% elif isCrit %}text-warning font-semibold{% elif isInfo %}text-info{% else %}text-success{% endif %}"><code>{{ l }}</code></pre>
        {% endfor %}
      </div>
    </section>
    <section class="py-16 px-4">
      <h2 class="text-3xl font-bold text-center mb-6">{{ DATA.metrics.headline }}</h2>
      <p class="font-mono text-center mb-10">{{ DATA.metrics.sub }}</p>
      <div class="stats shadow">
        {% for m in DATA.metrics.items %}
        <div class="stat">
          <div class="stat-title">{{ m.name }}</div>
          <div class="stat-value">{{ m.value }}</div>
          <div class="stat-desc">{{ m.desc }}</div>
        </div>
        {% endfor %}
      </div>
    </section>
    <section id="interventions" class="py-16 px-4">
      <h2 class="text-3xl font-bold text-center mb-10">Surgical Interventions</h2>
      <div class="grid lg:grid-cols-2 gap-8">
        {% for o in DATA.offers %}
        <div class="card bg-base-200">
          <div class="card-body">
            <h3 class="card-title">{{ o.name }}</h3>
            <p class="font-mono text-sm mb-2">{{ o.dur }}</p>
            <p class="mb-4">{{ o.desc }}</p>
            <ul class="space-y-2 mb-4">
              {% for f in o.features | slice(0,3) %}
              <li class="flex gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <span>{{ f }}</span>
              </li>
              {% endfor %}
            </ul>
            <div class="card-actions">
              <a href="{{ o.href }}" class="btn w-full {{ o.primary ? 'btn-primary' : 'btn-outline' }}">{{ o.cta }}</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </section>
    <section id="protocol" class="py-16 px-4">
      <h2 class="text-3xl font-bold text-center mb-10">{{ DATA.methodology.headline }}</h2>
      {% for p in DATA.methodology.paras %}<p class="max-w-2xl mx-auto mb-6">{{ p }}</p>{% endfor %}
      <ul class="steps mb-8">
        {% for pillar in DATA.methodology.pillars %}
          <li class="step step-primary">{{ pillar.name }}</li>
        {% endfor %}
      </ul>
      <div class="grid lg:grid-cols-3 gap-8 mb-8">
        {% for pillar in DATA.methodology.pillars %}
        <div>
          <h3 class="font-mono text-xl font-bold mb-2">{{ pillar.name }}</h3>
          <p>{{ pillar.text }}</p>
        </div>
        {% endfor %}
      </div>
      <div class="p-6 border-l-4 border-primary bg-base-200 max-w-2xl mx-auto">
        <p class="font-bold">{{ DATA.methodology.conclusion }}</p>
      </div>
    </section>
    <section id="contact" class="py-16 px-4">
      <h2 class="text-3xl font-bold text-center mb-6">{{ DATA.cta.headline }}</h2>
      <p class="max-w-2xl mx-auto mb-8 text-center">{{ DATA.cta.text }}</p>
      <form name="consulting-contact" method="POST" data-netlify="true" netlify action="/success/" class="max-w-3xl mx-auto grid gap-6">
        <input type="hidden" name="form-name" value="consulting-contact" />
        <div class="form-control">
          <label for="name" class="label"><span class="label-text">Your Name</span></label>
          <input id="name" name="name" type="text" class="input input-bordered" required />
        </div>
        <div class="form-control">
          <label for="email" class="label"><span class="label-text">Your Email</span></label>
          <input id="email" name="email" type="email" class="input input-bordered" aria-describedby="email-help" required />
          <label id="email-help" class="label"><span class="label-text-alt">We respond in under 24 hours.</span></label>
        </div>
        <div class="form-control">
          <label for="context" class="label"><span class="label-text">Describe Current AI Failures</span></label>
          <textarea id="context" name="context" class="textarea textarea-bordered h-32" aria-describedby="context-help"></textarea>
          <label id="context-help" class="label"><span class="label-text-alt">Hallucinations, leaks, latency...</span></label>
        </div>
        <button type="submit" class="btn btn-primary justify-self-center px-12">{{ DATA.cta.btn }}</button>
      </form>
    </section>
  </main>
  <footer class="footer items-center p-4 border-t border-base-300">
    <div class="items-center grid-flow-col">
      <span class="w-8 h-8 rounded-full bg-primary flex items-center justify-center font-mono font-bold text-base-100">E</span>
      <span class="font-mono">{{ DATA.slogan }}</span>
    </div>
    <div class="grid-flow-col md:place-self-center md:justify-self-end">
      <p class="font-mono text-sm">© {{ 'now' | date('yyyy') }}</p>
    </div>
  </footer>
</body>
</html>
