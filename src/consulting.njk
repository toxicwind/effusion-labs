      property="og:title"
      content="AI Safety Specialist - Make Your LLM Bulletproof | {{ DATA.brand }}"
    />
    <meta property="og:description" content="{{ DATA.desc }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ DATA.url }}" />
