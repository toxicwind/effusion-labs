{% macro codeLine(l) %}
  {% set isBreach = 'BREACH' in l %}
  {% set isCrit = 'CRITICAL' in l %}
  {% set isInfo = ('//' in l) or ('Executing' in l) %}
  <pre data-prefix="{% if isBreach or isCrit %}⚠{% elif isInfo %}//{% else %}${% endif %}" class="{% if isBreach %}text-error font-semibold{% elif isCrit %}text-warning font-semibold{% elif isInfo %}text-info{% else %}text-success{% endif %}"><code>{{ l }}</code></pre>
{% endmacro %}
<!DOCTYPE html>
<html lang="en" data-theme="business">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover">
  <title>AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}</title>
  <meta name="description" content="We eliminate hallucinations, jailbreaks, and data leaks with surgical controls so your LLM becomes a bulletproof asset.">
  <meta name="keywords" content="AI safety specialist, LLM security, hallucination prevention, prompt injection defense, RAG system security, AI reliability consultant">
  <meta property="og:title" content="AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}">
  <meta property="og:description" content="{{ DATA.desc }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ DATA.url }}">
  <meta property="og:image" content="https://effusionlabs.com/assets/og-ai-safety.jpg">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}">
  <meta name="twitter:description" content="{{ DATA.desc }}">
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" as="style">
  <script src="/assets/js/theme-utils.js"></script>
  <script>ThemeUtils.configure({ allowed: ['nord','night','business','light','dark'], defaultTheme: 'business', darkTheme: 'business' }); ThemeUtils.initEarly();</script>
  <link rel="stylesheet" href="/assets/css/app.css?v={{ build.hash or build.commit or build.version or buildTime }}">
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
</head>
<body>
  <nav class="navbar border-b border-base-300">
    <div class="navbar-start">
      <a href="/" class="font-mono text-xl font-bold">{{ DATA.brand }}</a>
    </div>
    <div class="navbar-end">
      <a href="#contact" class="btn btn-sm btn-primary transition-all duration-150 hover:-translate-y-0.5">Emergency Assessment</a>
    </div>
  </nav>

  <div class="flex flex-wrap items-center justify-center gap-2 py-4 px-5">
    {% for item in DATA.social_proof.items %}
      <span class="badge badge-outline font-mono">{{ item }}</span>
    {% endfor %}
  </div>

  <section class="hero relative px-5 py-16 lg:py-24">
    <div class="hero-content flex-col lg:flex-row gap-16">
      <div class="max-w-xl min-w-0">
        <p class="font-mono mb-4">{{ DATA.hero.kicker }}</p>
        <h1 class="text-5xl lg:text-6xl font-bold mb-6">{{ DATA.hero.headline }}</h1>
        <p class="mb-6">{{ DATA.hero.about }}</p>
        <div class="flex flex-wrap gap-4">
          {% for a in DATA.hero.actions %}
            <a href="{{ a.href }}" class="btn {% if a.primary %}btn-primary{% else %}btn-outline{% endif %} transition-all duration-150 hover:-translate-y-0.5">{{ a.label }}</a>
          {% endfor %}
        </div>
      </div>
      <div class="mockup-code [&_pre]:whitespace-pre w-fit max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto lg:absolute lg:right-[-8rem] lg:bottom-4 mt-8 lg:mt-0">
        {% for l in DATA.hero.code %}
          {{ codeLine(l) }}
        {% endfor %}
      </div>
    </div>
  </section>

  <section class="px-5 py-24">
    <h2 class="text-4xl font-bold text-center mb-4">{{ DATA.metrics.headline }}</h2>
    <p class="font-mono text-center mb-8">{{ DATA.metrics.sub }}</p>
    <div class="stats shadow">
      {% for m in DATA.metrics.items %}
      <div class="stat">
        <div class="stat-title">{{ m.name }}</div>
        <div class="stat-value">{{ m.value }}</div>
        <div class="stat-desc">{{ m.desc }}</div>
      </div>
      {% endfor %}
    </div>
  </section>

  <section id="interventions" class="px-5 py-24">
    <h2 class="text-4xl font-bold text-center mb-12">Surgical Interventions</h2>
    <div class="grid gap-8 lg:grid-cols-2">
      {% for o in DATA.offers %}
      <div class="card border border-base-300">
        <div class="card-body gap-4">
          <h3 class="card-title font-mono">{{ o.name }}</h3>
          <p class="font-mono text-sm">{{ o.dur }}</p>
          <p>{{ o.desc }}</p>
          <ul class="space-y-2">
            {% for f in o.features %}
            <li class="flex items-start gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="w-4 h-4 mt-1"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
              <span>{{ f }}</span>
            </li>
            {% endfor %}
          </ul>
          <div class="mt-4">
            <a href="{{ o.href }}" class="btn w-full {% if o.primary %}btn-primary{% else %}btn-outline{% endif %} transition-all duration-150 hover:-translate-y-0.5">{{ o.cta }}</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </section>

  <section id="methodology" class="px-5 py-24">
    <h2 class="text-4xl font-bold text-center mb-12">{{ DATA.methodology.headline }}</h2>
    {% for p in DATA.methodology.paras %}
      <p class="max-w-3xl mx-auto text-center mb-8">{{ p }}</p>
    {% endfor %}
    <ul class="steps steps-vertical lg:steps-horizontal mb-8">
      {% for pillar in DATA.methodology.pillars %}
      <li class="step step-primary">
        <div class="text-left">
          <div class="font-mono font-bold">{{ pillar.name }}</div>
          <p class="text-sm mt-2">{{ pillar.text }}</p>
        </div>
      </li>
      {% endfor %}
    </ul>
    <div class="alert alert-info justify-center">
      <span>{{ DATA.methodology.conclusion }}</span>
    </div>
  </section>

  <section id="contact" class="px-5 py-24">
    <h2 class="text-4xl font-bold text-center mb-6">{{ DATA.cta.headline }}</h2>
    <p class="text-center max-w-3xl mx-auto mb-10">{{ DATA.cta.text }}</p>
    <form name="consulting-contact" method="POST" data-netlify="true" netlify action="/success/" class="grid gap-6 max-w-3xl mx-auto">
      <input type="hidden" name="form-name" value="consulting-contact">
      <div class="form-control">
        <label for="name" class="label"><span class="label-text font-mono font-bold">Your Name</span></label>
        <input id="name" name="name" type="text" required pattern=".{2,}" class="input input-bordered">
      </div>
      <div class="form-control">
        <label for="email" class="label"><span class="label-text font-mono font-bold">Your Email</span></label>
        <input id="email" name="email" type="email" required aria-describedby="email-hint" class="input input-bordered">
        <span id="email-hint" class="text-sm opacity-70 mt-1">We reply within 24h.</span>
      </div>
      <div class="form-control">
        <label for="context" class="label"><span class="label-text font-mono font-bold">Describe Current AI Failures</span></label>
        <textarea id="context" name="context" class="textarea textarea-bordered h-32" aria-describedby="context-hint"></textarea>
        <span id="context-hint" class="text-sm opacity-70 mt-1">Hallucinations, data leaks, prompt injections...</span>
      </div>
      <div class="form-control">
        <button type="submit" class="btn btn-primary btn-lg transition-all duration-150 hover:-translate-y-0.5">{{ DATA.cta.btn }}</button>
      </div>
    </form>
  </section>

  <footer class="footer footer-center p-10 border-t border-base-300">
    <aside class="grid-flow-col items-center gap-2">
      <span class="w-8 h-8 rounded-full bg-primary flex items-center justify-center font-mono font-bold text-base-100">E</span>
      <span class="font-mono">{{ DATA.brand }}</span>
    </aside>
    <p class="font-mono">{{ DATA.slogan }}</p>
    <p class="text-sm">© {{ 'now' | date('yyyy') }} - Elite AI Safety Specialist</p>
  </footer>

  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"ProfessionalService",
    "name":"{{ DATA.brand }}",
    "url":"{{ DATA.url }}",
    "description":"{{ DATA.desc }}",
    "slogan":"{{ DATA.slogan }}",
    "hasOfferCatalog":{
      "@type":"OfferCatalog",
      "name":"Services",
      "itemListElement":[
        {% for o in DATA.offers %}
        {
          "@type":"Offer",
          "itemOffered":{
            "@type":"Service",
            "name":"{{ o.name }}",
            "description":"{{ o.desc }}"
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  }
  </script>
</body>
</html>
