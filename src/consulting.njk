{% macro chevronList(items) %}
<ul class="mt-4 space-y-2">
  {% for item in items %}
  <li class="flex gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 shrink-0 mt-1" viewBox="0 0 16 16" fill="none"><path d="M5 3l5 5-5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
    <span>{{ item }}</span>
  </li>
  {% endfor %}
</ul>
{% endmacro %}

<!DOCTYPE html>
