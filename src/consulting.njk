  <main class="max-w-[90rem] mx-auto px-4">
    <div class="flex flex-wrap justify-center gap-2 py-4">
      {% for item in DATA.social_proof.items %}
      <span class="badge badge-outline font-mono">{{ item }}</span>
      {% endfor %}
    </div>

    <section class="hero py-16">
      <div class="hero-content flex-col lg:flex-row items-start gap-10 relative w-full">
        <div class="space-y-6 max-w-[72ch] min-w-0">
          <p class="font-mono text-sm">{{ DATA.hero.kicker }}</p>
          <h1 class="text-5xl font-bold">{{ DATA.hero.headline }}</h1>
          <p>{{ DATA.hero.about }}</p>
          <div class="flex gap-4">
            {% for action in DATA.hero.actions %}
            <a href="{{ action.href }}" class="btn {% if action.primary %}btn-primary{% else %}btn-outline{% endif %}">{{ action.label }}</a>
            {% endfor %}
          </div>
        </div>
        <div>
          <div class="mockup-code [&_pre]:whitespace-pre w-fit max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto lg:absolute lg:right-[-8rem] lg:bottom-4">
            {% for l in DATA.hero.code %}
              {% set isBreach = 'BREACH' in l %}
              {% set isCrit = 'CRITICAL' in l %}
              {% set isInfo = ('//' in l) or ('Executing' in l) %}
