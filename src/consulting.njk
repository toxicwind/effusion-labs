      <div class="navbar-start">
        <a href="/" class="font-mono font-bold">{{ DATA.brand }}</a>
      </div>
      <div class="navbar-end">
        <a href="#contact" class="btn btn-primary btn-sm">Emergency Assessment</a>
      </div>
    </div>
  </nav>
  <main class="container mx-auto px-4">
    <section class="hero min-h-[60vh]">
      <div class="hero-content flex-col lg:flex-row gap-12 w-full">
        <div class="min-w-0 flex-1">
          <p class="font-mono text-info mb-2">{{ DATA.hero.kicker }}</p>
          <h1 class="text-5xl font-bold mb-4">{{ DATA.hero.headline }}</h1>
          <p class="mb-6">{{ DATA.hero.about }}</p>
          <div class="flex flex-wrap gap-4">
            {% for action in DATA.hero.actions %}
              {% if action.primary %}
                <a href="{{ action.href }}" class="btn btn-primary">{{ action.label }}</a>
              {% else %}
                <a href="{{ action.href }}" class="btn btn-outline">{{ action.label }}</a>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="relative flex-1">
          <div class="mockup-code [&_pre]:whitespace-pre w-fit max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto lg:absolute lg:right-[-8rem] lg:bottom-4">
            {% for l in DATA.hero.code %}
              {{ console_line(l) }}
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
    <section class="my-16 text-center">
      <h2 class="text-3xl font-bold mb-2">{{ DATA.metrics.headline }}</h2>
      <p class="font-mono mb-6">{{ DATA.metrics.sub }}</p>
      <div class="stats w-full">
        {% for m in DATA.metrics.items %}
        <div class="stat">
          <div class="stat-title">{{ m.name }}</div>
          <div class="stat-value">{{ m.value }}</div>
          <div class="stat-desc">{{ m.desc }}</div>
        </div>
        {% endfor %}
      </div>
    </section>
    <section id="interventions" class="my-16">
      <h2 class="text-3xl font-bold mb-8">SURGICAL INTERVENTIONS</h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {% for offer in DATA.offers %}
