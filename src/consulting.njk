    <div class="social-proof hb-neon hb-inlay p-4 mb-8 rounded-lg">
      <div class="flex flex-wrap items-center justify-center gap-6 text-sm font-mono">
        {% for item in DATA.social_proof.items %}
          <span class="flex items-center gap-2">
            <span class="w-2 h-2 bg-secondary rounded-full"></span>
            {{ item }}
          </span>
        {% endfor %}
      </div>
    </div>

    <section id="top" class="mb-32">
      <div class="chunky hb-brut-card hb-accent hb-overflow-visible hb-open-r hb-lean-left hb-card-limit p-6 md:p-12">
        <div class="hero-content w-full grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 p-0 items-start">
          <!-- TEXT -->
          <div class="order-1 lg:order-1 col-span-12 lg:col-span-5 min-w-0">
            <h1 class="hb-fluid-h1 hyper-title text-primary mb-2 hb-underline">{{ DATA.hero.headline }}</h1>
            <p class="py-6 font-mono text-primary/90 hb-fluid-kicker">{{ DATA.hero.kicker }}</p>
            <div class="text-xl leading-relaxed copy max-w-xl md:max-w-2xl"><p>{{ DATA.hero.about }}</p></div>
            <div class="mt-10 flex flex-wrap gap-6">
              {% for a in DATA.hero.actions %}
                <a class="btn {% if a.primary %}btn-primary{% else %}btn-outline{% endif %} btn-lg hb-plasma border-2 border-base-300 transform hover:scale-105" href="{{ a.href }}">{{ a.label }}</a>
              {% endfor %}
            </div>
          </div>
        </div>

        <!-- CODE panel -->
        <div class="relative mockup-code bg-base-300 border-2 border-primary/50 w-auto max-w-full text-xs md:text-sm shadow-2xl overflow-x-auto rounded-lg hb-console lg:hb-console lg:hb-bleed-r lg:hb-nudge lg:hb-float-cr">
          {% for l in DATA.hero.code %}
            {% set isBreach = 'BREACH' in l %}
            {% set isCrit   = 'CRITICAL' in l %}
            {% set isInfo   = ('//' in l) or ('Executing' in l) %}
            <pre
              data-prefix="{% if isBreach or isCrit %}&#9888;{% elif isInfo %}//{% else %}${% endif %}"
              class="{% if isBreach %}text-error font-bold{% elif isCrit %}text-warning font-bold{% elif isInfo %}text-info{% else %}text-success{% endif %} whitespace-pre"
            ><code>{{ l }}</code></pre>
          {% endfor %}
        </div>
      </div>
    </section>

    <section class="mb-32">
      <div class="hb-stripes rounded-xl p-2">
        <div class="hb-inlay text-center mb-10 p-6 md:p-10 rounded-xl mx-auto max-w-5xl">
