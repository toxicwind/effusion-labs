        {% for pillar in DATA.methodology.pillars %}
        <div>
          <p>{{ pillar.text }}</p>
        </div>
        {% endfor %}
      </div>
      <div class="card bg-base-200 mt-8">
        <div class="card-body">
          <p class="font-semibold">{{ DATA.methodology.conclusion }}</p>
        </div>
      </div>
    </section>

    <section id="contact" class="mt-24">
