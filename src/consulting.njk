          <div class="card-body">
            <h3 class="card-title">{{ offer.name }}</h3>
            <p class="font-mono text-sm">{{ offer.dur }}</p>
            <p>{{ offer.desc }}</p>
            <ul class="mt-4 space-y-1">
              {% for feature in offer.features %}
              <li class="flex items-start gap-2"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 mt-1"><path fill-rule="evenodd" d="M5.78 3.22a.75.75 0 011.06 0l4.25 4.25a.75.75 0 010 1.06l-4.25 4.25a.75.75 0 11-1.06-1.06L9.44 8 5.78 4.28a.75.75 0 010-1.06z" clip-rule="evenodd"/></svg><span>{{ feature }}</span></li>
              {% endfor %}
            </ul>
            <div class="card-actions mt-6">
              <a href="{{ offer.href }}" class="btn w-full {% if offer.primary %}btn-primary{% else %}btn-outline{% endif %}">{{ offer.cta }}</a>
