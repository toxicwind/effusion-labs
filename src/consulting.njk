            <div class="hb-scanbar mb-6"></div>
            <div class="{{ color }} text-6xl md:text-7xl font-mono font-extrabold hb-num-outline mb-3 group-hover:translate-y-[-2px] hb-anim">{{ metric.value }}</div>
