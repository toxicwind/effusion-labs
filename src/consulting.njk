<!DOCTYPE html>
<html lang="en" data-theme="business">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1,viewport-fit=cover"
    />
    <title>AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}</title>
    <meta name="description" content="{{ DATA.desc }}" />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap"
      as="style"
    />
    <script src="/assets/js/theme-utils.js"></script>
    <script>
      ThemeUtils.configure({
        allowed: ['nord', 'night', 'business', 'light', 'dark'],
        defaultTheme: 'business',
        darkTheme: 'business',
      });
      ThemeUtils.initEarly();
    </script>
    <link
      rel="stylesheet"
      href="/assets/css/app.css?v={{ build.hash or build.commit or build.version or buildTime }}"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="max-w-screen-xl mx-auto">
    <nav class="navbar border-b border-base-300">
      <div class="navbar-start">
        <a class="font-mono text-xl" href="/">{{ DATA.brand }}</a>
      </div>
      <div class="navbar-end">
        <a href="#contact" class="btn btn-sm btn-primary"
          >Emergency Assessment</a
        >
      </div>
    </nav>

    <div class="flex flex-wrap justify-center gap-2 py-4">
      {% for item in DATA.social_proof.items %}{{ badge(item) }}{% endfor %}
    </div>

    <main class="px-4">
      <section class="hero relative py-12">
        <div class="hero-content flex-col lg:flex-row items-start gap-12">
          <div class="flex-1 min-w-0 max-w-xl">
            <p class="font-mono text-sm text-primary mb-2">
              {{ DATA.hero.kicker }}
            </p>
            <h1 class="text-5xl font-bold mb-4">{{ DATA.hero.headline }}</h1>
            <p class="mb-6">{{ DATA.hero.about }}</p>
            <div class="flex flex-wrap gap-4">
              {% for a in DATA.hero.actions %}
              <a
                href="{{ a.href }}"
                class="btn {% if a.primary %}btn-primary{% else %}btn-outline{% endif %}"
                >{{ a.label }}</a
              >
              {% endfor %}
            </div>
          </div>
          <div
            class="mockup-code [&_pre]:whitespace-pre w-fit max-w-full sm:max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto sm:overflow-x-visible lg:absolute lg:right-[-8rem] lg:bottom-4"
          >
            {% for l in DATA.hero.code %}{{ code_line(l) }}{% endfor %}
          </div>
        </div>
      </section>

      <section class="py-16">
        <h2 class="text-3xl font-mono text-center mb-4">
          {{ DATA.metrics.headline }}
        </h2>
        <p class="text-center font-mono mb-8">{{ DATA.metrics.sub }}</p>
        <div class="stats shadow w-full">
          {% for m in DATA.metrics.items %}
          <div class="stat">
            <div class="stat-title">{{ m.name }}</div>
            <div class="stat-value">{{ m.value }}</div>
            <div class="stat-desc">{{ m.desc }}</div>
          </div>
          {% endfor %}
        </div>
      </section>

      <section id="interventions" class="py-16">
        <h2 class="text-3xl text-center font-mono mb-10">
          SURGICAL INTERVENTIONS
        </h2>
        <div class="grid gap-6 lg:grid-cols-2">
          {% for o in DATA.offers %}
          <div class="card border">
            <div class="card-body">
              <h3 class="card-title">{{ o.name }}</h3>
              <p class="font-mono text-sm mb-4">{{ o.dur }}</p>
              <p class="mb-4">{{ o.desc }}</p>
              <ul class="space-y-2 mb-6">
                {% for f in o.features %}
                <li class="flex gap-2">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-4 h-4 mt-1 flex-none"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                  <span>{{ f }}</span>
                </li>
                {% endfor %}
              </ul>
              <div class="card-actions mt-auto">
                <a
                  href="{{ o.href }}"
                  class="btn w-full {% if o.primary %}btn-primary{% else %}btn-outline{% endif %}"
                  >{{ o.cta }}</a
                >
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </section>

      <section id="methodology" class="py-16">
        <h2 class="text-3xl text-center font-mono mb-6">
          {{ DATA.methodology.headline }}
        </h2>
        {% for p in DATA.methodology.paras %}
        <p class="max-w-2xl mx-auto mb-8 text-center">{{ p }}</p>
        {% endfor %}
        <ul class="steps steps-vertical lg:steps-horizontal">
          {% for pillar in DATA.methodology.pillars %}
          <li class="step step-primary">
            <div class="flex flex-col text-left lg:text-center">
              <span class="font-mono font-bold">{{ pillar.name }}</span>
              <span class="text-sm opacity-80">{{ pillar.text }}</span>
            </div>
          </li>
          {% endfor %}
        </ul>
        <div class="mt-12 alert alert-info justify-center">
          <span class="font-mono">{{ DATA.methodology.conclusion }}</span>
        </div>
      </section>

      <section id="contact" class="py-16">
        <h2 class="text-3xl text-center font-mono mb-6">
          {{ DATA.cta.headline }}
        </h2>
        <p class="max-w-2xl mx-auto mb-8 text-center">{{ DATA.cta.text }}</p>
        <form
          name="consulting-contact"
          method="POST"
          data-netlify="true"
          netlify
          action="/success/"
          class="grid gap-6 max-w-2xl mx-auto"
        >
          <input type="hidden" name="form-name" value="consulting-contact" />
          <div class="form-control">
            <label for="name" class="label"
              ><span class="label-text">Your Name</span></label
            >
            <input
              id="name"
              name="name"
              type="text"
              required
              class="input input-bordered"
            />
          </div>
          <div class="form-control">
            <label for="email" class="label"
              ><span class="label-text">Your Email</span></label
            >
            <input
              id="email"
              name="email"
              type="email"
              required
              aria-describedby="email-hint"
              class="input input-bordered"
            />
            <span id="email-hint" class="text-xs opacity-70"
              >We respond within one business day.</span
            >
          </div>
          <div class="form-control">
            <label for="context" class="label"
              ><span class="label-text"
                >Describe Current AI Failures</span
              ></label
            >
            <textarea
              id="context"
              name="context"
              class="textarea textarea-bordered h-32"
              placeholder="Hallucinations, data leaks..."
              aria-describedby="context-hint"
            ></textarea>
            <span id="context-hint" class="text-xs opacity-70"
              >List symptoms; we'll trace root causes.</span
            >
          </div>
          <div class="form-control">
            <button type="submit" class="btn btn-primary w-full">
              {{ DATA.cta.btn }}
            </button>
          </div>
        </form>
      </section>
    </main>

    <footer class="footer items-center p-4 border-t">
      <div class="items-center grid-flow-col">
        <span
          class="w-8 h-8 rounded-full bg-primary text-base-100 flex items-center justify-center font-mono"
          >E</span
        >
        <p class="font-mono">{{ DATA.slogan }}</p>
      </div>
      <div class="grid-flow-col gap-4 md:place-self-center md:justify-self-end">
        <p class="font-mono text-sm">
          © {{ 'now' | date('yyyy') }} {{ DATA.brand }}
        </p>
      </div>
    </footer>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "{{ DATA.brand }}",
        "url": "{{ DATA.url }}",
        "description": "{{ DATA.desc }}",
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Consulting Services",
          "itemListElement": [
            {% for o in DATA.offers %}
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "{{ o.name }}",
                "description": "{{ o.desc }}"
              }
            }{% if not loop.last %},{% endif %}
            {% endfor %}
          ]
        }
      }
    </script>
  </body>
</html>
