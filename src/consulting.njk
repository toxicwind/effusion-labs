{% macro cta(action, extra='') %}
  <a href="{{ action.href }}" class="btn {% if action.primary %}btn-primary{% else %}btn-outline{% endif %} {{ extra }}">{{ action.label }}</a>
{% endmacro %}

<!DOCTYPE html>
<html lang="en" data-theme="business">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}</title>
  <meta name="description" content="{{ DATA.desc }}" />
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" as="style" />
  <link rel="stylesheet" href="/assets/css/app.css?v={{ build.hash or build.commit or build.version or buildTime }}" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" rel="stylesheet" />
</head>
<body class="min-h-screen">
  <header>
    <div class="navbar border-b border-base-300 max-w-[90rem] mx-auto px-4">
      <div class="flex-1">
        <a href="/" class="font-mono font-bold text-xl">{{ DATA.alt }}</a>
      </div>
      <div class="flex-none">
        <a href="#contact" class="btn btn-sm btn-primary">Emergency Assessment</a>
      </div>
    </div>
  </header>

  <main class="max-w-[90rem] mx-auto px-4">
    <section class="hero py-16 lg:py-24">
      <div class="hero-content w-full flex-col lg:flex-row gap-12 relative">
        <div class="min-w-0 max-w-[72ch] space-y-6">
          <p class="font-mono text-sm">{{ DATA.hero.kicker }}</p>
          <h1 class="text-5xl md:text-7xl font-bold">{{ DATA.hero.headline }}</h1>
          <p>{{ DATA.hero.about }}</p>
          <div class="flex flex-wrap gap-4">
            {% for action in DATA.hero.actions %}
              {{ cta(action) }}
            {% endfor %}
          </div>
        </div>
        <div class="mockup-code [&_pre]:whitespace-pre w-fit max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto lg:absolute lg:right-[-8rem] lg:bottom-4">
          {% for l in DATA.hero.code %}
            {% set isBreach = 'BREACH' in l %}
            {% set isCrit = 'CRITICAL' in l %}
            {% set isInfo = ('//' in l) or ('Executing' in l) %}
            <pre data-prefix="{% if isBreach or isCrit %}⚠{% elif isInfo %}//{% else %}${% endif %}" class="{% if isBreach %}text-error font-semibold{% elif isCrit %}text-warning font-semibold{% elif isInfo %}text-info{% else %}text-success{% endif %}"><code>{{ l }}</code></pre>
          {% endfor %}
        </div>
      </div>
    </section>

    <section class="py-16" id="metrics">
      <h2 class="text-3xl font-bold text-center mb-4">{{ DATA.metrics.headline }}</h2>
      <p class="text-center mb-12 font-mono">{{ DATA.metrics.sub }}</p>
      <div class="stats shadow flex flex-col lg:flex-row w-full">
        {% for m in DATA.metrics.items %}
        <div class="stat">
          <div class="stat-title">{{ m.name }}</div>
          <div class="stat-value">{{ m.value }}</div>
          <div class="stat-desc">{{ m.desc }}</div>
        </div>
        {% endfor %}
      </div>
    </section>

    <section id="interventions" class="py-16">
      <h2 class="text-3xl font-bold text-center mb-12">Surgical Interventions</h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {% for o in DATA.offers %}
          <div class="card border border-base-300">
            <div class="card-body">
              <h3 class="card-title">{{ o.name }}</h3>
              <p class="font-mono text-sm">{{ o.dur }}</p>
              <p>{{ o.desc }}</p>
              <ul class="space-y-2">
                {% for f in o.features | slice(0,3) %}
                <li class="flex items-start gap-2"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 mt-1"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg><span>{{ f }}</span></li>
                {% endfor %}
              </ul>
              {{ cta({"label":o.cta,"href":o.href,"primary":o.primary}, 'w-full mt-4') }}
            </div>
          </div>
        {% endfor %}
      </div>
    </section>

    <section id="protocol" class="py-16">
      <h2 class="text-3xl font-bold text-center mb-12">{{ DATA.methodology.headline }}</h2>
      <ul class="steps steps-vertical lg:steps-horizontal w-full">
        {% for pillar in DATA.methodology.pillars %}
          <li class="step step-primary">{{ pillar.name }}</li>
        {% endfor %}
      </ul>
      <div class="grid gap-8 mt-8 lg:grid-cols-3">
        {% for pillar in DATA.methodology.pillars %}
          <div>
            <h3 class="font-mono font-bold mb-2">{{ pillar.name }}</h3>
            <p>{{ pillar.text }}</p>
          </div>
        {% endfor %}
      </div>
      <div class="mt-8 p-6 border-l-4 border-primary bg-base-200">
        <p class="font-mono">{{ DATA.methodology.conclusion }}</p>
      </div>
    </section>

    <section id="contact" class="py-16">
      <h2 class="text-3xl font-bold text-center mb-4">{{ DATA.cta.headline }}</h2>
      <p class="text-center max-w-[72ch] mx-auto mb-12">{{ DATA.cta.text }}</p>
      <form name="consulting-contact" method="POST" data-netlify="true" netlify action="/success/" class="grid gap-6 max-w-3xl mx-auto">
        <input type="hidden" name="form-name" value="consulting-contact" />
        <div>
          <label for="name" class="label"><span class="label-text">Your Name</span></label>
          <input id="name" type="text" name="name" class="input input-bordered w-full" required />
        </div>
        <div>
          <label for="email" class="label"><span class="label-text">Your Email</span></label>
          <input id="email" type="email" name="email" class="input input-bordered w-full" required />
        </div>
        <div>
          <label for="context" class="label"><span class="label-text">Describe Current AI Failures</span></label>
          <textarea id="context" name="context" class="textarea textarea-bordered w-full" aria-describedby="context-help"></textarea>
          <p id="context-help" class="text-sm opacity-70">Hallucinations, data leaks, prompt injections, latency issues…</p>
        </div>
        <div>
          <button type="submit" class="btn btn-primary w-full md:w-auto">{{ DATA.cta.btn }}</button>
        </div>
      </form>
    </section>
  </main>

  <footer class="footer footer-center p-6 border-t border-base-300">
    <div>
      <span class="font-mono font-bold text-2xl">E</span>
      <p class="font-mono">{{ DATA.brand }}</p>
      <p class="font-mono">{{ DATA.slogan }}</p>
      <p>© {{ 'now' | date('yyyy') }}</p>
    </div>
  </footer>

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ProfessionalService",
    "name": "{{ DATA.brand }}",
    "url": "{{ DATA.url }}",
    "description": "{{ DATA.desc }}",
    "email": "{{ DATA.email }}",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "itemListElement": [
        {% for o in DATA.offers %}
        {
          "@type": "Offer",
          "name": "{{ o.name }}",
          "itemOffered": {
            "@type": "Service",
            "name": "{{ o.name }}",
            "description": "{{ o.desc }}"
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  }
  </script>
</body>
</html>

