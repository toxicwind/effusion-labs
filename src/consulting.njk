        </div>
        <div class="md:col-span-2">
          <button type="submit" class="btn btn-primary w-full">{{ DATA.cta.btn }}</button>
        </div>
      </form>
    </section>
  </main>

  <footer class="footer max-w-[90rem] mx-auto p-4 mt-24 border-t">
    <aside class="items-center grid-flow-col">
