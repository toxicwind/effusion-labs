      {% for p in DATA.methodology.paras %}<p class="mb-4">{{ p }}</p>{% endfor %}
      <ul class="steps steps-vertical lg:steps-horizontal mt-8">
        {% for pillar in DATA.methodology.pillars %}
        <li class="step step-primary">{{ pillar.name }}</li>
        {% endfor %}
      </ul>
