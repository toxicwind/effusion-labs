{% macro features(list) %}
<ul class="mt-4 space-y-2">
  {% for f in list %}
  <li class="flex items-start gap-2"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 mt-1"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg><span>{{ f }}</span></li>
  {% endfor %}
</ul>
{% endmacro %}
<!DOCTYPE html>
<html lang="en" data-theme="business">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover">
  <title>AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}</title>
  <meta name="description" content="{{ DATA.desc }}">
  <meta property="og:title" content="AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}">
  <meta property="og:description" content="{{ DATA.desc }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ DATA.url }}">
  <meta property="og:image" content="https://effusionlabs.com/assets/og-ai-safety.jpg">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}">
  <meta name="twitter:description" content="{{ DATA.desc }}">
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" as="style">
  <script src="/assets/js/theme-utils.js"></script>
  <script>ThemeUtils.configure({ allowed: ['nord','night','business','light','dark'], defaultTheme: 'business', darkTheme: 'business' }); ThemeUtils.initEarly();</script>
  <link rel="stylesheet" href="/assets/css/app.css?v={{ build.hash or build.commit or build.version or buildTime }}">
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"ProfessionalService",
    "name":"{{ DATA.brand }}",
    "url":"{{ DATA.url }}",
    "description":"{{ DATA.desc }}",
    "slogan":"{{ DATA.slogan }}",
    "email":"{{ DATA.email }}",
    "hasOfferCatalog":{
      "@type":"OfferCatalog",
      "itemListElement":[
        {% for o in DATA.offers %}
        {
          "@type":"Offer",
          "name":"{{ o.name }}",
          "description":"{{ o.desc }}",
          "itemOffered":{"@type":"Service","name":"{{ o.name }}"}
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  }
  </script>
</head>
<body class="font-sans">
  <nav class="navbar border-b">
    <div class="navbar-start"><a href="/" class="btn btn-ghost text-xl font-mono">{{ DATA.brand }}</a></div>
    <div class="navbar-end"><a href="#contact" class="btn btn-primary btn-sm">Emergency Assessment</a></div>
  </nav>
  <main class="px-6 py-12 max-w-7xl mx-auto">
    <section class="hero">
      <div class="hero-content flex-col lg:flex-row">
        <div class="min-w-0 max-w-xl">
          <p class="font-mono text-primary mb-2">{{ DATA.hero.kicker }}</p>
          <h1 class="text-5xl font-bold mb-4">{{ DATA.hero.headline }}</h1>
          <p class="mb-6">{{ DATA.hero.about }}</p>
          <div class="flex flex-col sm:flex-row gap-4">
            {% for action in DATA.hero.actions %}
              <a href="{{ action.href }}" class="btn {% if action.primary %}btn-primary{% else %}btn-outline{% endif %}">{{ action.label }}</a>
            {% endfor %}
          </div>
        </div>
        <div class="relative mt-10 lg:mt-0">
          <div class="mockup-code [&_pre]:whitespace-pre w-fit max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto sm:overflow-x-visible lg:absolute lg:right-[-8rem] lg:bottom-4">
            {% for l in DATA.hero.code %}
              {% set isBreach = 'BREACH' in l %}
              {% set isCrit = 'CRITICAL' in l %}
              {% set isInfo = ('//' in l) or ('Executing' in l) %}
              <pre data-prefix="{% if isBreach or isCrit %}⚠{% elif isInfo %}//{% else %}${% endif %}" class="{% if isBreach %}text-error font-semibold{% elif isCrit %}text-warning font-semibold{% elif isInfo %}text-info{% else %}text-success{% endif %}">
                <code>{{ l }}</code>
              </pre>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
    <section class="mt-24">
      <h2 class="text-3xl font-bold text-center">{{ DATA.metrics.headline }}</h2>
      <p class="font-mono text-center mt-2">{{ DATA.metrics.sub }}</p>
      <div class="stats shadow mt-8">
        {% for m in DATA.metrics.items %}
        <div class="stat">
          <div class="stat-title">{{ m.name }}</div>
          <div class="stat-value">{{ m.value }}</div>
          <div class="stat-desc">{{ m.desc }}</div>
        </div>
        {% endfor %}
      </div>
    </section>
    <section id="interventions" class="mt-24">
      <h2 class="text-3xl font-bold text-center mb-12">Surgical Interventions</h2>
      <div class="grid lg:grid-cols-2 gap-8">
        {% for o in DATA.offers %}
        <div class="card bg-base-200">
          <div class="card-body">
            <h3 class="card-title">{{ o.name }}</h3>
            <p class="font-mono text-sm">{{ o.dur }}</p>
            <p class="mb-4">{{ o.desc }}</p>
            {{ features(o.features) }}
            <div class="card-actions mt-6">
              <a href="{{ o.href }}" class="btn w-full {% if o.primary %}btn-primary{% else %}btn-outline{% endif %}">{{ o.cta }}</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </section>
    <section id="protocol" class="mt-24">
      <h2 class="text-3xl font-bold text-center">{{ DATA.methodology.headline }}</h2>
      {% for p in DATA.methodology.paras %}<p class="text-center mt-2">{{ p }}</p>{% endfor %}
      <ul class="steps steps-vertical lg:steps-horizontal mt-8">
        {% for pillar in DATA.methodology.pillars %}
        <li class="step step-primary">{{ pillar.name }}</li>
        {% endfor %}
      </ul>
      <div class="grid lg:grid-cols-3 gap-8 mt-8">
        {% for pillar in DATA.methodology.pillars %}
        <p>{{ pillar.text }}</p>
        {% endfor %}
      </div>
      <div class="alert alert-primary mt-8"><span>{{ DATA.methodology.conclusion }}</span></div>
    </section>
    <section id="contact" class="mt-24">
      <h2 class="text-3xl font-bold text-center">{{ DATA.cta.headline }}</h2>
      <p class="text-center mt-2">{{ DATA.cta.text }}</p>
      <form name="consulting-contact" method="POST" data-netlify="true" netlify action="/success/" class="grid gap-6 mt-8 max-w-2xl mx-auto">
        <input type="hidden" name="form-name" value="consulting-contact">
        <label for="name" class="form-control">
          <span class="label-text">Your Name</span>
          <input id="name" name="name" type="text" class="input input-bordered" required />
        </label>
        <label for="email" class="form-control">
          <span class="label-text">Your Email</span>
          <input id="email" name="email" type="email" class="input input-bordered" required />
        </label>
        <label for="context" class="form-control">
          <span class="label-text">Describe Current AI Failures</span>
          <textarea id="context" name="context" class="textarea textarea-bordered h-32" aria-describedby="context-help"></textarea>
          <span id="context-help" class="label-text-alt">Hallucinations, data leaks, prompt injections, latency issues...</span>
        </label>
        <div>
          <button type="submit" class="btn btn-primary w-full md:w-auto">{{ DATA.cta.btn }}</button>
        </div>
      </form>
    </section>
  </main>
  <footer class="footer footer-center p-4 bg-base-200 text-base-content">
    <aside>
      <div class="flex items-center justify-center gap-2 mb-2">
        <span class="w-8 h-8 rounded-full bg-primary text-base-100 flex items-center justify-center font-mono font-bold">E</span>
        <span class="font-mono">{{ DATA.brand }}</span>
      </div>
      <p class="font-mono">{{ DATA.slogan }}</p>
      <p class="font-mono">© {{ 'now' | date('yyyy') }}</p>
    </aside>
  </footer>
</body>
</html>
