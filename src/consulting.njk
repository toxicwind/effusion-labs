<!DOCTYPE html>
<html lang="en" data-theme="business">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover">
  <title>AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}</title>
  <meta name="description" content="{{ DATA.desc }}">
  <meta name="keywords" content="AI safety specialist, LLM security, hallucination prevention, prompt injection defense, RAG system security, AI reliability consultant">
  <meta property="og:title" content="AI Safety Specialist — Bulletproof LLMs | {{ DATA.brand }}">
  <meta property="og:description" content="{{ DATA.desc }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ DATA.url }}">
  <meta property="og:image" content="https://effusionlabs.com/assets/og-ai-safety.jpg">
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" as="style">
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
  <script src="/assets/js/theme-utils.js"></script>
  <script>ThemeUtils.configure({ allowed: ['nord','night','business','light','dark'], defaultTheme: 'business', darkTheme: 'business' }); ThemeUtils.initEarly();</script>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ProfessionalService",
    "name": "{{ DATA.brand }}",
    "url": "{{ DATA.url }}",
    "slogan": "{{ DATA.slogan }}",
    "email": "mailto:{{ DATA.email }}",
    "description": "{{ DATA.desc }}",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "itemListElement": [
        {% for o in DATA.offers %}{
          "@type": "Offer",
          "name": "{{ o.name }}",
          "itemOffered": {
            "@type": "Service",
            "name": "{{ o.name }}",
            "description": "{{ o.desc }}"
          }
        }{% if not loop.last %},{% endif %}{% endfor %}
      ]
    }
  }
  </script>
</head>
<body class="min-h-screen flex flex-col">
  <nav class="navbar border-b border-base-200">
    <div class="navbar-start">
      <a href="/" class="btn btn-ghost normal-case text-xl font-mono">{{ DATA.alt }}</a>
    </div>
    <div class="navbar-end">
      <a href="{{ DATA.nav.href }}" class="btn btn-sm btn-primary">{{ DATA.nav.label }}</a>
    </div>
  </nav>
  <main class="flex-1 px-4 md:px-8 max-w-7xl mx-auto w-full">
    <section class="hero mt-12">
      <div class="hero-content flex-col lg:flex-row gap-12 w-full">
        <div class="min-w-0 space-y-6">
          <p class="font-mono text-sm text-primary uppercase tracking-widest">{{ DATA.hero.kicker }}</p>
          <h1 class="text-5xl font-bold leading-tight">{{ DATA.hero.headline }}</h1>
          <p class="max-w-xl">{{ DATA.hero.about }}</p>
          <div class="flex gap-4 flex-wrap">
            {% for action in DATA.hero.actions %}{{ ctaButton(action) }}{% endfor %}
          </div>
        </div>
        <div class="relative lg:ml-8">
          <div class="mockup-code [&_pre]:whitespace-pre w-fit max-w-[96ch] max-h-[28rem] overflow-y-auto overflow-x-auto lg:absolute lg:right-[-8rem] lg:bottom-4">
            {% for l in DATA.hero.code %}
              {% set isBreach = 'BREACH' in l %}
              {% set isCrit = 'CRITICAL' in l %}
              {% set isInfo = ('//' in l) or ('Executing' in l) %}
              <pre data-prefix="{% if isBreach or isCrit %}⚠{% elif isInfo %}//{% else %}${% endif %}" class="{% if isBreach %}text-error font-semibold{% elif isCrit %}text-warning font-semibold{% elif isInfo %}text-info{% else %}text-success{% endif %}"><code>{{ l }}</code></pre>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
    <section class="mt-24">
      <div class="stats shadow w-full">
        {% for m in DATA.metrics.items %}
        <div class="stat">
          <div class="stat-title">{{ m.name }}</div>
          <div class="stat-value">{{ m.value }}</div>
          <div class="stat-desc">{{ m.desc }}</div>
        </div>
        {% endfor %}
      </div>
    </section>
    <section id="interventions" class="mt-24">
      <h2 class="text-3xl font-bold mb-10">{{ DATA.offersHeadline }}</h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {% for o in DATA.offers %}
        <div class="card bg-base-200 shadow">
          <div class="card-body">
            <h3 class="card-title">{{ o.name }}</h3>
            <p class="font-mono text-sm mb-3">{{ o.dur }}</p>
            <p>{{ o.desc }}</p>
            <ul class="mt-4 space-y-2">
              {% for f in o.features %}
              <li class="flex items-start gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                <span>{{ f }}</span>
              </li>
              {% endfor %}
            </ul>
            <div class="card-actions mt-6">
              {{ ctaButton(o) }}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </section>
    <section id="protocol" class="mt-24">
      <h2 class="text-3xl font-bold mb-8">The Effusion Protocol</h2>
      <ul class="steps w-full">
        {% for step in DATA.protocol.steps %}
          <li class="step step-primary">{{ step.name }}</li>
        {% endfor %}
      </ul>
      {% for step in DATA.protocol.steps %}
        <h3 class="text-xl font-bold mt-8">{{ step.name }}</h3>
        <p class="mt-2 max-w-3xl">{{ step.text }}</p>
      {% endfor %}
      <div class="alert alert-info mt-10">
        <div>{{ DATA.protocol.conclusion }}</div>
      </div>
    </section>
    <section id="contact" class="mt-24">
      <h2 class="text-3xl font-bold mb-4">{{ DATA.cta.headline }}</h2>
      <p class="mb-6 max-w-3xl">{{ DATA.cta.text }}</p>
      <form name="consulting-contact" method="POST" data-netlify="true" netlify class="grid gap-6 max-w-xl" action="/success/">
        <input type="hidden" name="form-name" value="consulting-contact">
        <div>
          <label for="name" class="label font-mono font-bold">Your Name</label>
          <input id="name" type="text" name="name" class="input input-bordered w-full" required />
        </div>
        <div>
          <label for="email" class="label font-mono font-bold">Your Email</label>
          <input id="email" type="email" name="email" class="input input-bordered w-full" required />
        </div>
        <div>
          <label for="context" class="label font-mono font-bold">Describe Current AI Failures</label>
          <textarea id="context" name="context" class="textarea textarea-bordered h-32 w-full" aria-describedby="context-help"></textarea>
          <p id="context-help" class="text-sm opacity-70 mt-1">Hallucinations, data leaks, prompt injections, latency issues...</p>
        </div>
        <div>
          <button type="submit" class="btn btn-primary w-full text-lg">{{ DATA.cta.btn }}</button>
        </div>
      </form>
    </section>
  </main>
  <footer class="footer footer-center p-6 bg-base-200 mt-24">
    <aside>
      <div class="flex items-center gap-2">
        <span class="font-mono text-xl">{{ DATA.brand }}</span>
      </div>
      <p class="font-mono">{{ DATA.slogan }}</p>
      <p class="text-sm">© {{ 'now' | date('yyyy') }} - Elite AI Safety Specialist</p>
    </aside>
  </footer>
</body>
</html>
