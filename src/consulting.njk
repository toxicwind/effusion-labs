          <span id="context-help" class="label-text-alt">Hallucinations, data leaks, prompt injections...</span>
        </div>
        <button type="submit" class="btn btn-primary">{{ DATA.cta.btn }}</button>
      </form>
    </section>
  </main>
  <footer class="footer p-6 border-t">
    <aside class="items-center grid-flow-col">
      <span class="w-8 h-8 rounded-full bg-primary inline-flex items-center justify-center font-mono text-black font-bold">E</span>
      <p>{{ DATA.brand }} — {{ DATA.slogan }}<br>© {{ 'now' | date('yyyy') }}</p>
    </aside>
  </footer>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ProfessionalService",
    "name": "{{ DATA.brand }}",
    "description": "{{ DATA.desc }}",
    "url": "{{ DATA.url }}",
    "email": "{{ DATA.email }}",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "itemListElement": [
        {% for offer in DATA.offers %}
