{% macro console_line(l) %}
  {% set isBreach = 'BREACH' in l %}
  {% set isCrit = 'CRITICAL' in l %}
  {% set isInfo = ('//' in l) or ('Executing' in l) %}
  <pre data-prefix="{% if isBreach or isCrit %}⚠{% elif isInfo %}//{% else %}${% endif %}" class="{% if isBreach %}text-error font-semibold{% elif isCrit %}text-warning font-semibold{% elif isInfo %}text-info{% else %}text-success{% endif %}"><code>{{ l }}</code></pre>
{% endmacro %}
<!DOCTYPE html>
<html lang="en" data-theme="business">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover">
