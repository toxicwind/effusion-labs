---
layout: "layout.njk"
title: "All Work"
pagination:
  data: collections.work
  size: 20
  alias: workItem
permalink: "/work/{{ pagination.pageNumber }}/index.html"
---

<section class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {% for item in pagination.items %}
    <a href="{{ item.url }}" class="card bg-base-100 border border-base-300 shadow hover:shadow-lg transition">
      <div class="card-body">
        <h2 class="card-title">{{ item.data.title }}</h2>
        {% if item.data.description or item.data.lede %}
          <p class="opacity-70">{{ item.data.description or item.data.lede }}</p>
        {% endif %}
      </div>
    </a>
  {% endfor %}
</section>

{% include "components/pagination.njk" %}
