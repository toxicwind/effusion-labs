{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "type",
    "product_id",
    "brand",
    "line",
    "character",
    "series",
    "form"
  ],
  "properties": {
    "type": { "const": "product" },
    "product_id": { "type": "string" },
    "brand": { "const": "pop-mart" },
    "line": { "const": "the-monsters" },
    "character": { "type": "string" },
    "series": { "type": "string" },
    "form": { "type": "string" },
    "variant": { "type": "string" },
    "edition": {
      "type": "object",
      "properties": {
        "kind": { "type": "string" }
      },
      "required": ["kind"],
      "additionalProperties": false
    },
    "distribution": {
      "type": "object",
      "properties": {
        "region_lock": { "type": "boolean" },
        "markets": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "size": {
      "type": "object",
      "properties": {
        "unit": { "type": "string" },
        "h": { "type": "number" },
        "w": { "type": "number" },
        "d": { "type": "number" }
      },
      "additionalProperties": false
    },
    "release_date": { "type": "string", "format": "date" },
    "market_listings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["market", "currency", "price"],
        "properties": {
          "market": { "type": "string" },
          "currency": { "type": "string" },
          "price": { "type": "number" }
        },
        "additionalProperties": false
      }
    },
    "availability": {
      "type": "object",
      "properties": {
        "limited": { "type": "boolean" },
        "unit_count": { "type": ["number", "null"] }
      },
      "additionalProperties": false
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": { "path": { "type": "string" } },
        "additionalProperties": false
      }
    },
    "provenance_ref": { "type": "string" },
    "confidence": { "type": "number" },
    "notes": { "type": "string" }
  },
  "additionalProperties": false
}
